                        <TextBox x:Name="Rights"
                        materialDesign:HintAssist.FloatingScale="0.60"
                        materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                        materialDesign:HintAssist.Hint="{helpers:Localization Aqua_Version_Rights}"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                            <TextBox.Text>
                                <Binding
                        Mode="TwoWay"
                        Path="Rights"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True" />
                            </TextBox.Text>
                            <Validation.ErrorTemplate>
                                <ControlTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <AdornedElementPlaceholder />
                                        <TextBlock
                                MaxWidth="400"
                                Margin="10"
                                FontSize="16"
                                Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                Text="{Binding [0].ErrorContent}"
                                TextWrapping="Wrap" />
                                    </StackPanel>
                                </ControlTemplate>
                            </Validation.ErrorTemplate>

                        </TextBox>
                        <TextBox x:Name="ForwardTranslationToVersionId"
                        materialDesign:HintAssist.FloatingScale="0.60"
                        materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                        materialDesign:HintAssist.Hint="{helpers:Localization Aqua_Version_ForwardTranslationToVersionId}"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                            <TextBox.Text>
                                <Binding
                        Mode="TwoWay"
                        Path="ForwardTranslationToVersionId"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True" />
                            </TextBox.Text>
                            <Validation.ErrorTemplate>
                                <ControlTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <AdornedElementPlaceholder />
                                        <TextBlock
                                MaxWidth="400"
                                Margin="10"
                                FontSize="16"
                                Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                Text="{Binding [0].ErrorContent}"
                                TextWrapping="Wrap" />
                                    </StackPanel>
                                </ControlTemplate>
                            </Validation.ErrorTemplate>

                        </TextBox>
                        <TextBox x:Name="BackTranslationToVersionId"
                        materialDesign:HintAssist.FloatingScale="0.60"
                        materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                        materialDesign:HintAssist.Hint="{helpers:Localization Aqua_Version_BackTranslationToVersionId}"
                        materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                        Foreground="{DynamicResource MaterialDesignBody}"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                            <TextBox.Text>
                                <Binding
                        Mode="TwoWay"
                        Path="BackTranslationToVersionId"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True" />
                            </TextBox.Text>
                            <Validation.ErrorTemplate>
                                <ControlTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <AdornedElementPlaceholder />
                                        <TextBlock
                                MaxWidth="400"
                                Margin="10"
                                FontSize="16"
                                Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                Text="{Binding [0].ErrorContent}"
                                TextWrapping="Wrap" />
                                    </StackPanel>
                                </ControlTemplate>
                            </Validation.ErrorTemplate>

                        </TextBox>
                        <CheckBox
                    Name="MachineTranslation"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    IsChecked="false"
                    >
                            Is this a machine translation?
                        </CheckBox>
                    </StackPanel>

                    <StackPanel Grid.Row="2"
                        VerticalAlignment="Bottom"
                        Orientation="Vertical">
                        <Button
                            x:Name="AddVersion"
                            Content="{helpers:Localization Aqua_Version_AddVersion}"
                            IsDefault="True"
                            Style="{StaticResource TransparentStyle}">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="ParentViewModel.IsBusy" Converter="{StaticResource BooleanInversionConverter}"/>
                                    <Binding Path="ValidationResult.IsValid"/>
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                        <Button
                            x:Name="GetVersion"
                            Content="{helpers:Localization Aqua_Version_GetVersion}"
                            IsDefault="True"
                            Style="{StaticResource TransparentStyle}">
                            <Button.IsEnabled>
                                <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                    <Binding Path="HasId"/>
                                    <Binding Path="ParentViewModel.IsBusy" Converter="{StaticResource BooleanInversionConverter}"/>
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </StackPanel>
        </Grid>
        </materialDesign:Card>
        <materialDesign:Card  Grid.Column="1"  Style="{StaticResource RightCardStyle}">
            
            <Grid  Margin="0" Width="Auto"  >
                <Grid.IsEnabled>
                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                        <Binding Path="DataLoaded"/>
                        <Binding Path="ParentViewModel.IsBusy" Converter="{StaticResource BooleanInversionConverter}"/>
                    </MultiBinding>
                </Grid.IsEnabled>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="11*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Content="{helpers:Localization Aqua_Version_Revisions}" FontSize="20"></Label>
                <StackPanel
                    VerticalAlignment="Top"
                    Orientation="Vertical" Grid.Row="1">

                    <DataGrid
                        x:Name="gridRevisions"
                        Margin="0, 5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        GridLinesVisibility="All"
                        BorderThickness="1"
                        MaxHeight="300"
                        HorizontalGridLinesBrush="{StaticResource GridBrush}"
                        IsReadOnly="True"
                        ItemsSource="{Binding Items}"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        VerticalGridLinesBrush="{StaticResource GridBrush}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="{DynamicResource PrimaryHueDarkBrush}" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="Foreground" Value="{StaticResource PrimaryHueDarkForegroundBrush}" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                        <DataGridTemplateColumn Width="*" Header="{helpers:Localization Aqua_Version_Revisions_Name_Column}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Grid.Column="0"
                                    Margin="4,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="{Binding ElementName=TitleFontSizeSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                    FontWeight="Bold"
                                    Text="{Binding name}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*" Header="{helpers:Localization Aqua_Version_Revisions_Date_Column}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Grid.Column="0"
                                    Margin="4,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="{Binding ElementName=TitleFontSizeSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                    FontWeight="Bold"
                                    Text="{Binding date}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="90" Header="{helpers:Localization Aqua_Version_Revisions_Add_Column}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                        <Button 
                                    cm:Message.Attach="ViewRevision($dataContext)"
                                    Style="{StaticResource SmallTransparentStyle}"  >
                                            <materialDesign:PackIcon
                                                Width="30"
                                                Height="30"
                                                Foreground="{StaticResource BlueMidBrush}"
                                                Kind="AddCircleOutline" />
                                        </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                        <Button 
                                    cm:Message.Attach="DeleteItem($dataContext)"
                                    Style="{StaticResource SmallTransparentStyle}"  >
                                            <materialDesign:PackIcon
                                                Width="30"
                                                Height="30"
                                                Foreground="{StaticResource BlueMidBrush}"
                                                Kind="CloseCircleOutline" />
                                        </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                <StackPanel
                    Grid.Row="2"
                    Margin="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button
                        x:Name="AddRevision"
                        IsDefault="False"
                        IsEnabled="{Binding ParentViewModel.IsBusy, Converter={StaticResource BooleanInversionConverter}}"
                        Style="{StaticResource TransparentStyle}" Content="{helpers:Localization Aqua_Version_AddRevision}"></Button>
                    <Button
                        x:Name="GetRevisions"
                        IsDefault="False"    
                        IsEnabled="{Binding ParentViewModel.IsBusy, Converter={StaticResource BooleanInversionConverter}}"
                        Style="{StaticResource TransparentStyle}" Content="{helpers:Localization Aqua_Version_ReloadRevisions}"></Button>
                </StackPanel>
                   
            </Grid>
       
        </materialDesign:Card>
    </Grid>
    <Button
        x:Name="DeleteVersion"
        Content="{helpers:Localization Aqua_Version_DeleteVersion}"
        IsDefault="False"
        ToolTip="{helpers:Localization Aqua_Version_DeleteVersionDescription}"
        Style="{StaticResource TransparentStyle}">
        <Button.IsEnabled>
            <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                <Binding Path="HasId"/>
                <Binding Path="ParentViewModel.IsBusy" Converter="{StaticResource BooleanInversionConverter}"/>
            </MultiBinding>
        </Button.IsEnabled>
    </Button>
    </StackPanel>
</UserControl>
