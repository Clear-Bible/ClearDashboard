<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Caliburn.Micro" Version="4.0.212" />
	    <PackageReference Include="Dahomey.Json" Version="1.12.2" />
		<PackageReference Include="Dahomey.Json.Attributes" Version="1.0.1" />
		<PackageReference Include="DotNetKit.Wpf.AutoCompleteComboBox" Version="1.4.0" />
		<PackageReference Include="MediatR.Extensions.Microsoft.DependencyInjection" Version="9.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="2.2.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\ClearDashboard.Wpf.Application.Abstractions\ClearDashboard.Wpf.Application.Abstractions.csproj" />
	</ItemGroup>

  <ItemGroup>
    <Page Update="Views\AquaCorpusAnalysisEnhancedViewItemView.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Strings\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Strings\Resources.en.resx">
      <SubType>Designer</SubType>
      <Generator>PublicResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Strings\Resources.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="Services\vref.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if $(ConfigurationName) == Debug (&#xD;&#xA;&#xD;&#xA;robocopy $(TargetDir) $(SolutionDir)ClearDashboard.Wpf.Application\bin\Debug\net7.0-windows $(TargetName).* /IS /IT ;&#xD;&#xA;&#xD;&#xA;robocopy $(TargetDir)\en $(SolutionDir)ClearDashboard.Wpf.Application\bin\Debug\net7.0-windows\en $(TargetName).resources.dll /IS /IT ;&#xD;&#xA;&#xD;&#xA;robocopy $(TargetDir)\Services $(SolutionDir)ClearDashboard.Wpf.Application\bin\Debug\net7.0-windows\Services vref.txt /IS /IT ;&#xD;&#xA;&#xD;&#xA;) &#xD;&#xA;&#xD;&#xA;if $(ConfigurationName) == Release (&#xD;&#xA;&#xD;&#xA;robocopy $(TargetDir) $(SolutionDir)ClearDashboard.Wpf.Application\bin\Release\net7.0-windows $(TargetName).* /IS /IT ;&#xD;&#xA;&#xD;&#xA;robocopy $(TargetDir)\en $(SolutionDir)ClearDashboard.Wpf.Application\bin\Release\net7.0-windows\en $(TargetName).resources.dll /IS /IT ;&#xD;&#xA;&#xD;&#xA;robocopy $(TargetDir)\Services $(SolutionDir)ClearDashboard.Wpf.Application\bin\Release\net7.0-windows\Services vref.txt /IS /IT ;&#xD;&#xA;&#xD;&#xA;)&#xD;&#xA;&#xD;&#xA;if %25errorlevel%25 leq 1 exit 0 else exit %25errorlevel%25" />
  </Target>

</Project>
