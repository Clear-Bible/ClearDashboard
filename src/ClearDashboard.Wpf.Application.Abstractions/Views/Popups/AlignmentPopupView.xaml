<UserControl x:Class="ClearDashboard.Wpf.Application.Views.Popups.AlignmentPopupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d:DataContext="{d:DesignInstance Type=popups:AlignmentPopupViewModel}"
             xmlns:popups="clr-namespace:ClearDashboard.Wpf.Application.ViewModels.Popups"
             xmlns:cm="http://caliburnmicro.com"
             xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
             xmlns:a="clr-namespace:ClearDashboard.Wpf.Application.Models.EnhancedView"
             xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings;assembly=ClearDashboard.Wpf.Application.Abstractions"
             helpers:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
             mc:Ignorable="d" 
             Width="800"
             d:DesignHeight="450" d:DesignWidth="800"
             FocusManager.FocusedElement="{Binding ElementName=Ok}">

    <Grid Background="{DynamicResource MaterialDesignBackground}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="Message" HorizontalAlignment="Center" Foreground="Black" FontSize="28" Margin="10"/>
        <!--<TextBlock Grid.Row="1" x:Name="SecondaryMessage" HorizontalAlignment="Center" Foreground="Black" FontSize="14" Margin="10"/>-->
        <ListBox Grid.Row="2" 
                 Style="{StaticResource MaterialDesignToolToggleListBox}"
                 Margin="4"
                 Height="28"
                 HorizontalAlignment="Center"
                 SelectedIndex="0"
                 cm:Message.Attach="[Event SelectionChanged] = [Action OnAlignmentApprovalChanged($eventArgs)]">

            <!--IsEnabled="{Binding FetchingData, Converter={StaticResource BooleanInversionConverter}}"-->
            <ListBoxItem Content="{helpers:Localization EnhancedView_MarkAlignmentAsValid}" Tag="{x:Static a:BulkAlignmentReviewTags.MarkSelectedAsValid}"></ListBoxItem>
            <ListBoxItem Content="{helpers:Localization EnhancedView_MarkAlignmentAsInvalid}" Tag="{x:Static a:BulkAlignmentReviewTags.MarkSelectedAsInvalid}"></ListBoxItem>
            <ListBoxItem Content="{helpers:Localization EnhancedView_MarkAlignmentAsNeedsReview}" Tag="{x:Static a:BulkAlignmentReviewTags.MarkSelectedAsNeedsReview}"></ListBoxItem>
        
        </ListBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="Ok" Margin="5, 10" 
                    Content="{Binding OkLabel}" 
                    IsDefault="True"
                    Style="{StaticResource TransparentStyle}"/>
            <Button x:Name="Cancel" Margin="5, 10" Content="{Binding CancelLabel}" 
                    IsDefault="false"
                    Style="{StaticResource TransparentStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
