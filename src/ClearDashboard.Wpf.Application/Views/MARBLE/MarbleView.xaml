<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.Marble.MarbleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="http://caliburnmicro.com"
    xmlns:controls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Marble"
    xmlns:marble="clr-namespace:ClearDashboard.Wpf.Application.ViewModels.Marble"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ClearDashboard.DataAccessLayer.Models.ViewModels.WordMeanings;assembly=ClearDashboard.DAL.Models"
    xmlns:pieChart="clr-namespace:ClearDashboard.Wpf.Controls.DonutGraph.PieChart;assembly=ClearDashboard.Wpf.Controls"
    xmlns:userControls="clr-namespace:ClearDashboard.Wpf.Application.UserControls"
    x:Name="MarbleViewControl"
    d:DataContext="{d:DesignInstance Type=marble:MarbleViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <UserControl.Resources>
        <x:ArrayExtension x:Key="brushes" Type="{x:Type Brush}">
            <SolidColorBrush Color="#9F15C3" />
            <SolidColorBrush Color="#FF8E01" />
            <SolidColorBrush Color="#339933" />
            <SolidColorBrush Color="#00AAFF" />
            <SolidColorBrush Color="#818183" />
            <SolidColorBrush Color="#000033" />
        </x:ArrayExtension>

        <Style x:Key="ExpanderStyle" TargetType="{x:Type Expander}">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Background" Value="{StaticResource PrimaryHueMidBrush}" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryHueMidForegroundBrush}" />
        </Style>

        <marble:MarbleViewModel x:Key="ViewModelsSource" />
    </UserControl.Resources>

    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <!--  ROW 0  -->
        <StackPanel Orientation="Horizontal">
            <Button
                Width="20"
                Height="20"
                Margin="5,5,50,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                cm:Message.Attach="[Event Click] = [Action LaunchMirrorView(MainGrid.ActualWidth,MainGrid.ActualHeight)]"
                ToolTip="{helpers:Localization ExpandView}">
                <Button.Style>
                    <Style BasedOn="{StaticResource MaterialDesignFlatLightButton}" TargetType="Button">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransformOrigin" Value="0.5, 0.5" />
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="2" ScaleY="2" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <materialDesign:PackIcon
                    Background="Transparent"
                    Foreground="{StaticResource SecondaryHueDarkBrush}"
                    Kind="ArrowExpandAll" />
            </Button>

            <userControls:BcvUserControl
                BcvDictionary="{Binding Path=BcvDictionary}"
                CurrentBcv="{Binding Path=CurrentBcv}"
                IsControlEnabled="False"
                IsControlMinimal="True"
                ParatextSync="{Binding Path=ParatextSync, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ShowHeader="False"
                ShowOffsetControl="False"
                VerseChange="{Binding Path=VerseChange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                VerseOffsetRange="{Binding Path=VerseOffsetRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  ROW 1  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10,0,10,0"
            BorderBrush="{StaticResource SecondaryHueMidBrush}"
            BorderThickness="2"
            CornerRadius="5">
            <StackPanel Orientation="Vertical">
                <controls:AutoCompleteComboBox
                    Width="200"
                    Height="Auto"
                    Margin="30,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    ItemsSource="{Binding Projects}"
                    SelectedItem="{Binding SelectedProject}"
                    Style="{StaticResource MaterialDesignComboBox}"
                    TextSearch.TextPath="LongName">

                    <!--<controls:AutoCompleteComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontSize="12" Text="{Binding CorpusTypeDisplay}" />
                                <TextBlock FontSize="24" Text="{Binding Name}" />
                                <TextBlock FontSize="12" Text="{Binding LongName}" />
                                <TextBlock FontSize="10" Text="{Binding Id}" />
                            </StackPanel>
                        </DataTemplate>
                    </controls:AutoCompleteComboBox.ItemTemplate>-->

                </controls:AutoCompleteComboBox>

                <ListBox ItemsSource="{Binding LexicalLinks}" SelectedValue="{Binding SelectedLexicalLink, Mode=TwoWay}">
                    <ListBox.Style>
                        <Style BasedOn="{StaticResource MaterialDesignChoiceChipAccentListBox}" TargetType="ListBox">
                            <Setter Property="FlowDirection" Value="LeftToRight" />
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="FontFamily" Value="SBL Greek" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding LexicalLinks[0].IsRtl}" Value="True">
                                    <Setter Property="FlowDirection" Value="RightToLeft" />
                                    <Setter Property="FontSize" Value="20" />
                                    <Setter Property="FontFamily" Value="SBL Hebrew" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.Style>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <TextBlock Text="{Binding Word}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" />
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!--  ROW 2  -->

        <!--  DataContext="{Binding Senses, Source={StaticResource ViewModelsSource}}"  -->
        <!--  DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=Senses}"  -->
        <pieChart:PieChartLayout
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            HorizontalAlignment="Stretch"
            ManuscriptTextProperty="ManuscriptWord"
            PlottedProperty="VerseTotal">
            <pieChart:PieChartLayout.DataContext>
                <Binding Path="Senses" />
            </pieChart:PieChartLayout.DataContext>
            <pieChart:PieChartLayout.ColorSelector>
                <pieChart:IndexedColourSelector Brushes="{StaticResource brushes}" />
            </pieChart:PieChartLayout.ColorSelector>
        </pieChart:PieChartLayout>

        <!--  ROW 3  -->
        <GroupBox
            Grid.Row="3"
            Grid.Column="0"
            Width="Auto"
            Margin="10,5,10,10"
            Header="General Information">
            <ScrollViewer>
                <StackPanel Orientation="Horizontal">
                    <Expander Header="Parts of Speech   ">
                        <Expander.Style>
                            <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="IsExpanded" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSense.PartsOfSpeech.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <StackPanel
                            Margin="3"
                            Background="{StaticResource MaterialDesignPaper}"
                            Orientation="Vertical"
                            TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                            <ListBox MaxHeight="300" ItemsSource="{Binding SelectedSense.PartsOfSpeech}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="Height" Value="30" />

                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="3" HorizontalAlignment="Stretch">
                                            <Grid.Background>
                                                <SolidColorBrush Color="#EBEBEB" />
                                            </Grid.Background>


                                            <!--  the name of this item  -->
                                            <TextBlock
                                                Margin="3"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Text="{Binding .}"
                                                TextWrapping="Wrap" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Expander>

                    <Expander Header="Strong Codes   ">
                        <Expander.Style>
                            <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="IsExpanded" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSense.StrongCodes.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <StackPanel
                            Margin="3"
                            Background="{StaticResource MaterialDesignPaper}"
                            Orientation="Vertical"
                            TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                            <ListBox
                                x:Name="LvStrongCodes"
                                MaxHeight="300"
                                ItemsSource="{Binding SelectedSense.StrongCodes}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="Height" Value="30" />

                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="3" HorizontalAlignment="Stretch">
                                            <Grid.Background>
                                                <SolidColorBrush Color="#EBEBEB" />
                                            </Grid.Background>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Button
                                                Grid.Column="0"
                                                Height="20"
                                                VerticalAlignment="Center"
                                                Command="{Binding DataContext.LaunchLogosCommand, ElementName=LvStrongCodes}"
                                                CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
                                                        <Setter Property="Padding" Value="0" />
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <Button.Content>
                                                    <Image
                                                        Width="16"
                                                        Height="16"
                                                        Source="/Resources/logos_icon.png" />
                                                </Button.Content>
                                            </Button>

                                            <!--  the name of this item  -->
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="3"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Text="{Binding}"
                                                TextWrapping="Wrap" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Expander>


                    <Expander Header="Related Lemmas   ">
                        <Expander.Style>
                            <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="IsExpanded" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedSense.RelatedLemmas.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Expander.Style>
                        <StackPanel
                            Margin="3"
                            Background="{StaticResource MaterialDesignPaper}"
                            Orientation="Vertical"
                            TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                            <ListBox MaxHeight="300" ItemsSource="{Binding SelectedSense.RelatedLemmaList}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="Margin" Value="0" />
                                        <Setter Property="Height" Value="30" />

                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="Foreground" Value="Black" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="3" HorizontalAlignment="Stretch">
                                            <Grid.Background>
                                                <SolidColorBrush Color="#EBEBEB" />
                                            </Grid.Background>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Button
                                                Grid.Column="0"
                                                Height="20"
                                                Command="{Binding DataContext.SearchSenseCommand, ElementName=LvStrongCodes}"
                                                CommandParameter="{Binding}"
                                                VerticalAlignment="Center">
                                                <Button.Style>
                                                    <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
                                                        <Setter Property="Padding" Value="0" />
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding SelectedSense.IsAvailable}" Value="False">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Magnify" />
                                            </Button>

                                            <!--  the name of this item  -->
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="3"
                                                VerticalAlignment="Center"
                                                FontFamily="SBL Hebrew"
                                                FontSize="20"
                                                FontWeight="Medium"
                                                Text="{Binding Lemma}"
                                                TextWrapping="Wrap" />

                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>
        </GroupBox>


        <!--  ROW 4  -->
        <GroupBox
            Grid.Row="4"
            Grid.Column="0"
            Width="Auto"
            Margin="5,5,10,10"
            Header="Senses">

            <ListView
                x:Name="SensesListView"
                Margin="0"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding Senses}"
                SelectedIndex="0"
                SelectedItem="{Binding SelectedSense}">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="2,0,0,0" />

                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>

                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Height" Value="25" />
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>

                        <GridViewColumn Width="300">
                            <GridViewColumn.Header>
                                <TextBlock HorizontalAlignment="Left" Text="Sense" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Sense}" TextWrapping="Wrap" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="130">
                            <GridViewColumn.Header>
                                <TextBlock HorizontalAlignment="Left" Text="Verse Total" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=VerseTotalPercent}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <ScrollViewer
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5">
            <StackPanel Orientation="Vertical">
                <Expander
                    Header="Definition"
                    IsExpanded="True"
                    Style="{StaticResource ExpanderStyle}">
                    <StackPanel
                        Margin="3"
                        Background="{StaticResource MaterialDesignPaper}"
                        Orientation="Vertical"
                        TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                        <TextBlock
                            Padding="3"
                            FontWeight="Bold"
                            Text="Definition Short:"
                            TextDecorations="Underline" />
                        <TextBox
                            Width="550"
                            Padding="3"
                            IsReadOnly="True"
                            Text="{Binding Path=SelectedSense.DescriptionShort}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="0,5,0,0"
                            Padding="3"
                            FontWeight="Bold"
                            Text="Definition Long:"
                            TextDecorations="Underline">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedSense.DescriptionLong}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <TextBox
                            Width="550"
                            Padding="3"
                            IsReadOnly="True"
                            Text="{Binding Path=SelectedSense.DescriptionLong}"
                            TextWrapping="Wrap">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedSense.DescriptionLong}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock
                            Margin="0,5,0,0"
                            Padding="3"
                            FontWeight="Bold"
                            Text="Glosses:"
                            TextDecorations="Underline" />
                        <ListBox ItemsSource="{Binding SelectedSense.Glosses}" />
                    </StackPanel>
                </Expander>





                <Expander Header="Verses" Style="{StaticResource ExpanderStyle}">
                    <StackPanel
                        Margin="3"
                        Background="{StaticResource MaterialDesignPaper}"
                        Orientation="Vertical"
                        TextBlock.Foreground="{StaticResource MaterialDesignBody}">
                        <ListBox MaxHeight="300" ItemsSource="{Binding SelectedSense.Verses}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Height" Value="30" />

                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3" HorizontalAlignment="Stretch">
                                        <Grid.Background>
                                            <SolidColorBrush Color="#EBEBEB" />
                                        </Grid.Background>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="25" />
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>


                                        <Button VerticalAlignment="Center">
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="{x:Type Button}">
                                                    <Setter Property="Padding" Value="0" />
                                                    <Setter Property="Background" Value="Transparent" />
                                                </Style>
                                            </Button.Style>
                                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="Eye" />
                                        </Button>

                                        <!--  the name of this item  -->
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Text="{Binding}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Expander>


                <Expander Header="Synonyms">
                    <Expander.Style>
                        <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSense.Synonyms.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Expander.Style>
                    <StackPanel
                        Margin="3"
                        Background="{StaticResource MaterialDesignPaper}"
                        Orientation="Vertical"
                        TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                        <ListBox MaxHeight="300" ItemsSource="{Binding SelectedSense.Synonyms}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Height" Value="30" />

                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3" HorizontalAlignment="Stretch">
                                        <Grid.Background>
                                            <SolidColorBrush Color="#EBEBEB" />
                                        </Grid.Background>


                                        <!--  the name of this item  -->
                                        <TextBlock
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            FontFamily="SBL Hebrew"
                                            FontSize="20"
                                            FontWeight="Medium"
                                            Text="{Binding}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Expander>

                <Expander Header="Antonyms">
                    <Expander.Style>
                        <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSense.Antonyms.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Expander.Style>
                    <StackPanel
                        Margin="3"
                        Background="{StaticResource MaterialDesignPaper}"
                        Orientation="Vertical"
                        TextBlock.Foreground="{StaticResource MaterialDesignBody}">
                        <ListBox MaxHeight="300" ItemsSource="{Binding SelectedSense.Antonyms}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Height" Value="30" />

                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3" HorizontalAlignment="Stretch">
                                        <Grid.Background>
                                            <SolidColorBrush Color="#EBEBEB" />
                                        </Grid.Background>

                                        <!--  the name of this item  -->
                                        <TextBlock
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            FontFamily="SBL Hebrew"
                                            FontSize="20"
                                            FontWeight="Medium"
                                            Text="{Binding}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
