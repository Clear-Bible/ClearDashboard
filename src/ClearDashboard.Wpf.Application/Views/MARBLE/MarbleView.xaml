                <Expander Header="Domains">
                    <Expander.Style>
                        <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedSense.Domains.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Expander.Style>
                    <StackPanel
                        Margin="3"
                        Background="{StaticResource MaterialDesignPaper}"
                        Orientation="Vertical"
                        TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                        <TextBlock
                            FontWeight="Bold"
                            Text="Domains:"
                            TextDecorations="Underline" />

                        <ListBox MaxHeight="300" ItemsSource="{Binding SelectedSense.Domains}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Height" Value="30" />

                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3" HorizontalAlignment="Stretch">
                                        <Grid.Background>
                                            <SolidColorBrush Color="#EBEBEB" />
                                        </Grid.Background>

                                        <!--  the name of this item  -->
                                        <TextBlock
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Text="{Binding}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock
                            FontWeight="Bold"
                            Text="Sub Domains:"
                            TextDecorations="Underline" />
                        <ListBox MaxHeight="300" ItemsSource="{Binding SelectedSense.SubDomains}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="Height" Value="30" />

                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="Black" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="3" HorizontalAlignment="Stretch">
                                        <Grid.Background>
                                            <SolidColorBrush Color="#EBEBEB" />
                                        </Grid.Background>

                                        <!--  the name of this item  -->
                                        <TextBlock
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Text="{Binding}"
