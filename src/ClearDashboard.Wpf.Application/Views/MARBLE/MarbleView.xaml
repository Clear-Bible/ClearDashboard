<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.Marble.MarbleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:cm="http://caliburnmicro.com"
    xmlns:controls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
    xmlns:converters="clr-namespace:ClearDashboard.Wpf.Application.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:enhancedViews="clr-namespace:ClearDashboard.Wpf.Application.Views.EnhancedView"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:marble="clr-namespace:ClearDashboard.Wpf.Application.ViewModels.Marble"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ClearDashboard.DataAccessLayer.Models.ViewModels.WordMeanings;assembly=ClearDashboard.DAL.Models"
    xmlns:pieChart="clr-namespace:ClearDashboard.Wpf.Controls.DonutGraph.PieChart;assembly=ClearDashboard.Wpf.Controls"
    xmlns:userControls="clr-namespace:ClearDashboard.Wpf.Application.UserControls"
    xmlns:wpfKeyBoard="clr-namespace:wpfKeyBoard;assembly=wpfKeyBoard"
    x:Name="MarbleViewControl"
    d:DataContext="{d:DesignInstance Type=marble:MarbleViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="900"
    d:DesignWidth="800"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <UserControl.Resources>
        <x:ArrayExtension x:Key="brushes" Type="{x:Type Brush}">
            <SolidColorBrush Color="#9F15C3" />
            <SolidColorBrush Color="#FF8E01" />
            <SolidColorBrush Color="#339933" />
            <SolidColorBrush Color="#00AAFF" />
            <SolidColorBrush Color="#818183" />
            <SolidColorBrush Color="#000033" />
        </x:ArrayExtension>

        <ResourceDictionary x:Key="virtualKeyboard">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WpfKeyboard.Resources;component/styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WpfKeyboard.Resources;component/styles/Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WpfKeyboard.Resources;component/styles/ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <Style x:Key="ExpanderStyle" TargetType="{x:Type Expander}">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Background" Value="{StaticResource PrimaryHueMidBrush}" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryHueMidForegroundBrush}" />
        </Style>

        <marble:MarbleViewModel x:Key="ViewModelsSource" />
    </UserControl.Resources>

    <Grid x:Name="MainGrid" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!--  ROW 0  -->
        <StackPanel Grid.Column="0" Orientation="Horizontal">
            <Button
                Width="20"
                Height="20"
                Margin="5,5,50,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                cm:Message.Attach="[Event Click] = [Action LaunchMirrorView(MainGrid.ActualWidth,MainGrid.ActualHeight)]"
                ToolTip="{helpers:Localization ExpandView}">
                <Button.Style>
                    <Style BasedOn="{StaticResource MaterialDesignFlatLightButton}" TargetType="Button">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Background" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransformOrigin" Value="0.5, 0.5" />
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="2" ScaleY="2" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <materialDesign:PackIcon
                    Background="Transparent"
                    Foreground="{StaticResource SecondaryHueDarkBrush}"
                    Kind="ArrowExpandAll" />
            </Button>

            <userControls:BcvUserControl
                BcvDictionary="{Binding Path=BcvDictionary}"
                CurrentBcv="{Binding Path=CurrentBcv}"
                IsControlEnabled="False"
                IsControlMinimal="True"
                ParatextSync="{Binding Path=ParatextSync, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                ShowHeader="False"
                ShowOffsetControl="False"
                VerseChange="{Binding Path=VerseChange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                VerseOffsetRange="{Binding Path=VerseOffsetRange, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>




        <!--  ROW 1  -->
        <materialDesign:DrawerHost
            x:Name="DrawerHost"
            Grid.Row="1"
            BorderBrush="{DynamicResource MaterialDesignDivider}"
            BorderThickness="2"
            BottomDrawerBackground="{DynamicResource SecondaryHueLightBrush}"
            BottomDrawerCornerRadius="20 20 0 0"
            Visibility="{Binding DrawerVisibility}">

            <materialDesign:DrawerHost.TopDrawerContent>
                <Grid ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="260" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="80"
                        Margin="5"
                        VerticalAlignment="Top"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Top}"
                        Content="CLOSE"
                        Style="{StaticResource TransparentStyle}" />

                    <Border
                        Grid.Column="1"
                        Margin="5,3,0,0"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <StackPanel Orientation="Vertical">
                            <Label
                                Margin="5,0,0,0"
                                VerticalAlignment="Top"
                                Content="Search by Hebrew/Greek"
                                Foreground="{StaticResource PrimaryHueMidBrush}" />

                            <TextBox
                                x:Name="SearchTextBox"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                Text="{Binding Path=SearchSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <Border
                                Margin="3"
                                Background="{StaticResource MahApps.Brushes.Gray5}"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <wpfKeyBoard:VirtualKeyboardControl
                                    x:Name="KeyboardControl"
                                    Width="325"
                                    Height="175"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource MahApps.Brushes.Gray1}"
                                    BorderBrush="{StaticResource SecondaryHueMidBrush}"
                                    BorderThickness="2">
                                    <b:Interaction.Triggers>
                                        <b:EventTrigger EventName="VirtualKeyPressed">
                                            <b:CallMethodAction MethodName="VirtualKeyPressed" TargetObject="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type wpfKeyBoard:VirtualKeyboardControl}}, Path=DataContext}" />
                                        </b:EventTrigger>
                                    </b:Interaction.Triggers>
                                </wpfKeyBoard:VirtualKeyboardControl>
                            </Border>
                        </StackPanel>
                    </Border>

                    <Border
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="5,3,10,0"
                        BorderBrush="Black"
                        BorderThickness="1">
                        <StackPanel Orientation="Vertical">
                            <Label
                                Margin="5,0,0,0"
                                Content="Search by English Gloss"
                                Foreground="{StaticResource PrimaryHueMidBrush}" />
                            <TextBox
                                MinWidth="310"
                                MaxWidth="350"
                                Margin="5,0,5,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                AcceptsReturn="True"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                Text="{Binding SearchEnglish, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Border>
                    <!--  cm:Message.Attach="[Event TextChanged] = [Action SearchEnglishChanged]"  -->

                    <ListView
                        x:Name="SearchListView"
                        Grid.Row="0"
                        Grid.Column="3"
                        Margin="10,3,10,3"
                        FontFamily="SBH Hebrew Regular"
                        FontSize="16"
                        ItemsSource="{Binding SearchResults}">
                        <!--<ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Height" Value="30" />
                            </Style>
                        </ListView.ItemContainerStyle>-->

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="400">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=stringB}" TextWrapping="Wrap" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="300">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                x:Name="btn"
                                                MinWidth="150"
                                                Command="{Binding DataContext.GotoSourceWordCommand, ElementName=SearchListView}"
                                                CommandParameter="{Binding ElementName=btn}"
                                                Content="{Binding stringA}"
                                                Cursor="Hand"
                                                Tag="{Binding stringB}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </materialDesign:DrawerHost.TopDrawerContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition x:Name="HeaderColumn" Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Width="25"
                        Height="25"
                        Margin="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                        CommandParameter="{x:Static Dock.Top}"
                        ToolTip="{helpers:Localization ExpandView}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource MaterialDesignFlatLightButton}" TargetType="Button">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Background" Value="Transparent" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="RenderTransformOrigin" Value="0.5, 0.5" />
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1.75" ScaleY="1.75" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <iconPacks:PackIconMaterial
                            Width="25"
                            Height="25"
                            Background="Transparent"
                            Foreground="{StaticResource PrimaryHueDarkBrush}"
                            Kind="DatabaseSearch" />
                    </Button>


                    <materialDesign:Card
                        Grid.Column="1"
                        Width="{Binding ActualWidth, ElementName=HeaderColumn, Converter={converters:WidthSubtraction}, ConverterParameter='30'}"
                        Margin="0,0,20,0"
                        materialDesign:ElevationAssist.Elevation="Dp0"
                        Background="#EEEBEB">
                        <ListBox
                            ItemsSource="{Binding LexicalLinks}"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            SelectedValue="{Binding SelectedLexicalLink, Mode=TwoWay}">
                            <ListBox.Style>
                                <Style BasedOn="{StaticResource MaterialDesignChoiceChipPrimaryListBox}" TargetType="ListBox">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="FontFamily" Value="SBL Greek" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LexicalLinks[0].IsRtl}" Value="True">
                                            <Setter Property="FlowDirection" Value="RightToLeft" />
                                            <Setter Property="FontSize" Value="20" />
                                            <Setter Property="FontFamily" Value="SBL Hebrew" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <TextBlock Text="{Binding Word}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" />
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </materialDesign:Card>
                </Grid>


                <ScrollViewer x:Name="MarbleScrollViewer" Grid.Row="1">
                    <Grid ShowGridLines="False">
                        <Grid.RowDefinitions>
                            <!--  row 0  -->
                            <RowDefinition Height="Auto" />
                            <!--  row 1  -->
                            <RowDefinition Height="Auto" />
                            <!--  row 2  -->
                            <RowDefinition Height="*" />
                            <!--  row 3  -->
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>



                        <!--  ROW 1  -->

                        <!--  DataContext="{Binding Senses, Source={StaticResource ViewModelsSource}}"  -->
                        <!--  DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=Senses}"  -->
                        <pieChart:PieChartLayout
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="10"
                            HorizontalAlignment="Stretch"
                            ManuscriptTextProperty="ManuscriptWord"
                            PlottedProperty="VerseTotal">
                            <pieChart:PieChartLayout.DataContext>
                                <Binding Path="Senses" />
                            </pieChart:PieChartLayout.DataContext>
                            <pieChart:PieChartLayout.ColorSelector>
                                <pieChart:IndexedColourSelector Brushes="{StaticResource brushes}" />
                            </pieChart:PieChartLayout.ColorSelector>
                        </pieChart:PieChartLayout>

                        <!--  ROW 2  -->
                        <GroupBox
                            Name="GeneralInformationGroupBox"
                            Grid.Row="2"
                            Grid.Column="0"
                            Width="Auto"
                            Margin="10,5,10,10"
                            Header="General Information"
                            PreviewMouseWheel="AllowScrolling_OnPreviewMouseWheel">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border
                                            BorderBrush="{StaticResource MaterialDesignLightBackground}"
                                            BorderThickness="2"
                                            CornerRadius="3">

                                            <Button
                                                x:Name="ShowLogos"
                                                Width="26"
                                                Height="26"
                                                Padding="0"
                                                VerticalAlignment="Center"
                                                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                                Command="{Binding DataContext.LaunchLogosCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding}">
                                                <Button.Content>
                                                    <Image
                                                        Width="26"
                                                        Height="26"
                                                        Source="/Resources/logos_icon.png" />
                                                </Button.Content>
                                            </Button>
                                        </Border>

                                        <TextBlock
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Text="{Binding DataContext.SelectedWord, ElementName=MainGrid}">

                                            <TextBlock.Style>
                                                <Style BasedOn="{StaticResource MaterialDesignSubtitle1TextBlock}" TargetType="TextBlock">
                                                    <Setter Property="FontSize" Value="16" />
                                                    <Setter Property="FontFamily" Value="SBL Greek" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsTargetRtl, ElementName=MainGrid}" Value="True">
                                                            <Setter Property="FontSize" Value="20" />
                                                            <Setter Property="FontFamily" Value="SBL Hebrew" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>


                                        <TextBlock
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                            Text="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <ScrollViewer>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>


                                    <Expander Grid.Column="0" Header="Strong Codes   ">
                                        <Expander.Style>
                                            <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Setter Property="IsExpanded" Value="True" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedSense.StrongCodes.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Expander.Style>
                                        <StackPanel
                                            Margin="3"
                                            Background="{StaticResource MaterialDesignPaper}"
                                            Orientation="Vertical"
                                            TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                                            <ListBox
                                                x:Name="LvStrongCodes"
                                                MaxHeight="300"
                                                ItemsSource="{Binding SelectedSense.StrongCodes}">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="0" />
                                                        <Setter Property="Margin" Value="0" />
                                                        <Setter Property="Height" Value="30" />

                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold" />
                                                                <Setter Property="Background" Value="Transparent" />
                                                                <Setter Property="Foreground" Value="Black" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>

                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="3" HorizontalAlignment="Stretch">
                                                            <Grid.Background>
                                                                <SolidColorBrush Color="#EBEBEB" />
                                                            </Grid.Background>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="30" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <Button
                                                                Grid.Column="0"
                                                                Height="20"
                                                                VerticalAlignment="Center"
                                                                Command="{Binding DataContext.LaunchLogosStrongNumberCommand, ElementName=LvStrongCodes}"
                                                                CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
                                                                        <Setter Property="Padding" Value="0" />
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <Button.Content>
                                                                    <Image
                                                                        Width="16"
                                                                        Height="16"
                                                                        Source="/Resources/logos_icon.png" />
                                                                </Button.Content>
                                                            </Button>

                                                            <!--  the name of this item  -->
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                Margin="3"
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                FontWeight="Medium"
                                                                Text="{Binding}"
                                                                TextWrapping="Wrap" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Expander>

                                    <Expander Grid.Column="1" Header="Parts of Speech   ">
                                        <Expander.Style>
                                            <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Setter Property="IsExpanded" Value="True" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedSense.PartsOfSpeech.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Expander.Style>
                                        <StackPanel
                                            Margin="3"
                                            Background="{StaticResource MaterialDesignPaper}"
                                            Orientation="Vertical"
                                            TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                                            <ListBox MaxHeight="300" ItemsSource="{Binding SelectedSense.PartsOfSpeech}">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="0" />
                                                        <Setter Property="Margin" Value="0" />
                                                        <Setter Property="Height" Value="30" />

                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold" />
                                                                <Setter Property="Background" Value="Transparent" />
                                                                <Setter Property="Foreground" Value="Black" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>

                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="3" HorizontalAlignment="Stretch">
                                                            <Grid.Background>
                                                                <SolidColorBrush Color="#EBEBEB" />
                                                            </Grid.Background>

                                                            <StackPanel Orientation="Horizontal">
                                                                <!--  instance id number  -->
                                                                <TextBlock
                                                                    Margin="3"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="14"
                                                                    FontWeight="Medium"
                                                                    Foreground="{StaticResource PrimaryHueMidBrush}"
                                                                    Text="{Binding Id}"
                                                                    TextWrapping="Wrap" />
                                                                <!--  pos short  -->
                                                                <TextBlock
                                                                    Margin="3"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="14"
                                                                    FontWeight="Medium"
                                                                    Text="{Binding Abbr}"
                                                                    TextWrapping="Wrap" />
                                                                <!--  pos Long  -->
                                                                <TextBlock
                                                                    Margin="3"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="14"
                                                                    FontWeight="Medium"
                                                                    Foreground="{StaticResource PrimaryHueMidBrush}"
                                                                    Text="{Binding Long}"
                                                                    TextWrapping="Wrap" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Expander>

                                    <Expander Grid.Column="2" Header="Related Lemmas   ">
                                        <Expander.Style>
                                            <Style BasedOn="{StaticResource ExpanderStyle}" TargetType="Expander">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Setter Property="IsExpanded" Value="True" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedSense.RelatedLemmas.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Expander.Style>
                                        <StackPanel
                                            Margin="3"
                                            Background="{StaticResource MaterialDesignPaper}"
                                            Orientation="Vertical"
                                            TextBlock.Foreground="{StaticResource MaterialDesignBody}">

                                            <ListBox
                                                MaxHeight="300"
                                                ItemsSource="{Binding SelectedSense.RelatedLemmaList}"
                                                ScrollViewer.HorizontalScrollBarVisibility="Auto">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="0" />
                                                        <Setter Property="Margin" Value="0" />
                                                        <Setter Property="Height" Value="30" />

                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="FontWeight" Value="Bold" />
                                                                <Setter Property="Background" Value="Transparent" />
                                                                <Setter Property="Foreground" Value="Black" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>

                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Margin="3" HorizontalAlignment="Stretch">
                                                            <Grid.Background>
                                                                <SolidColorBrush Color="#EBEBEB" />
                                                            </Grid.Background>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="30" />
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

                                                            <Button
                                                                Grid.Column="0"
                                                                Height="20"
                                                                VerticalAlignment="Center"
                                                                Command="{Binding DataContext.SearchSenseCommand, ElementName=LvStrongCodes}"
                                                                CommandParameter="{Binding}">
                                                                <Button.Style>
                                                                    <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
                                                                        <Setter Property="Padding" Value="0" />
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding SelectedSense.IsAvailable}" Value="False">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Button.Style>
                                                                <materialDesign:PackIcon Kind="Magnify" />
                                                            </Button>

                                                            <!--  the instance id  -->
                                                            <TextBlock
                                                                Grid.Column="1"
                                                                Margin="3"
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                FontWeight="Medium"
                                                                Foreground="{StaticResource PrimaryHueMidBrush}"
                                                                Text="{Binding Id}"
                                                                TextWrapping="Wrap" />

