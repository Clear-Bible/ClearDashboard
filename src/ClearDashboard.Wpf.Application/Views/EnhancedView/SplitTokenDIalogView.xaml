<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.EnhancedView.SplitTokenDialogView"
    x:Name="SplitTokenDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    d:DataContext="{d:DesignInstance Type=viewModels:SplitTokenDialogViewModel}"
    xmlns:viewModels="clr-namespace:ClearDashboard.Wpf.Application.ViewModels.EnhancedView"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers;assembly=ClearDashboard.Wpf.Application.Abstractions"
    xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings;assembly=ClearDashboard.Wpf.Application.Abstractions"
    xmlns:userControls="clr-namespace:ClearDashboard.Wpf.Application.UserControls"
    xmlns:converters="clr-namespace:ClearDashboard.Wpf.Application.Converters"
    helpers:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
    mc:Ignorable="d"
    >
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid MinWidth="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Content="{helpers:Localization EnhancedView_SplitTokenLocation}" 
               FontFamily="{DynamicResource MaterialDesignFont}"
               FontSize="16"
               HorizontalContentAlignment="Center"
               Margin="0,10,0,20"
               />

        <userControls:TokenCharactersDisplay Grid.Row="1" x:Name="CharactersDisplay" 
                                             CharacterWidth="50"
                                             DataContext="{Binding TokenCharacters}" 
                                             FontFamily="{Binding ElementName=SplitTokenDialog, Path=DataContext.TokenFontFamily}"
                                             FontSize="40"
                                             HorizontalAlignment="Center"
                                             HorizontalContentAlignment="Center"
                                             Threshold="{Binding ElementName=CharacterSlider, Path=Value}"
        />

        <Slider Grid.Row="2" x:Name="CharacterSlider"
            IsSnapToTickEnabled="True"
            Maximum="{Binding TokenCharacters.Count}"
            Minimum="0"
            TickFrequency="1"
            Value="{Binding CharacterThreshold}" 
            VerticalAlignment="Center"
            Width="{Binding ElementName=CharactersDisplay, Path=ActualWidth}"
            />

        <Grid Grid.Row="3" Margin="0,20,0,20"          
              Visibility="{Binding ApplyEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" 
                   Content="{helpers:Localization EnhancedView_NewToken}"
                   FontFamily="{DynamicResource MaterialDesignFont}"
                   FontSize="16"
                   HorizontalAlignment="Right"
                   Margin="0,0,20,0"
                   VerticalAlignment="Center"
                   />
            <TextBlock Grid.Row="0" Grid.Column="1" 
                       FontFamily="{Binding ElementName=SplitTokenDialog, Path=DataContext.TokenFontFamily}"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Text="{Binding Subtoken1}"
                       />
            <Label Grid.Row="1" Grid.Column="0" 
                   Content="{helpers:Localization EnhancedView_NewToken}"
                   FontFamily="{DynamicResource MaterialDesignFont}"
                   FontSize="16"
                   HorizontalAlignment="Right"
                   Margin="0,0,20,0"
                   VerticalAlignment="Center"
                   />
            <TextBlock Grid.Row="1" Grid.Column="1" 
                       FontFamily="{Binding ElementName=SplitTokenDialog, Path=DataContext.TokenFontFamily}"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Text="{Binding Subtoken2}"/>
        </Grid>

        <StackPanel Grid.Row="4"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="ApplySplit" 
                    Content="{helpers:Localization EnhancedView_SplitToken}"
                    FontFamily="{DynamicResource MaterialDesignFont}"
                    FontSize="14"
                    Margin="10"
                    IsEnabled="{Binding ApplyEnabled}"
                    Style="{StaticResource TransparentStyle}"
                    />
            <Button x:Name="CancelSplit" 
                    Content="{helpers:Localization Cancel}"
                    FontFamily="{DynamicResource MaterialDesignFont}"
                    FontSize="14"
                    Margin="10"
                    IsEnabled="{Binding CancelEnabled}"
                    Style="{StaticResource TransparentStyle}"
                    />
        </StackPanel>

        <ProgressBar Grid.Row="1"
                     Grid.RowSpan="3"
                     Width="76"
                     Height="75"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Foreground="{DynamicResource SecondaryHueMidBrush}"
                     IsIndeterminate="True"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     Visibility="{Binding ProgressBarVisibility}"
                     Value="0" />
    </Grid>
</UserControl>
