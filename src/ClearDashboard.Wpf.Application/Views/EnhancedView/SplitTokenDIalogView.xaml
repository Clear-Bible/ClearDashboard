<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.EnhancedView.SplitTokenDialogView"
    x:Name="SplitTokenDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:cm="http://caliburnmicro.com"
    d:DataContext="{d:DesignInstance Type=viewModels:SplitTokenDialogViewModel}"
    xmlns:viewModels="clr-namespace:ClearDashboard.Wpf.Application.ViewModels.EnhancedView"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers;assembly=ClearDashboard.Wpf.Application.Abstractions"
    xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings;assembly=ClearDashboard.Wpf.Application.Abstractions"
    xmlns:userControls="clr-namespace:ClearDashboard.Wpf.Application.UserControls"
    xmlns:converters="clr-namespace:ClearDashboard.Wpf.Application.Converters"
    helpers:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
    mc:Ignorable="d"
    >
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="SliderRepeatLeft" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border SnapsToDevicePixels="True" Background="{DynamicResource PrimaryHueMidBrush}"  BorderThickness="1" BorderBrush="{DynamicResource PrimaryHueMidBrush}" Height="5"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderRepeatRight" TargetType="RepeatButton">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="IsTabStop" Value="false" />
            <Setter Property="Focusable" Value="false" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderThumbTop" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Path Data="M 0 0 L 16 0 L 8 16 Z"  Stroke="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,0" StrokeThickness="2" Fill="{DynamicResource PrimaryHueMidBrush}"></Path>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SliderThumbBottom" TargetType="Thumb">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Path Data="M 0 16 L 16 16 L 8 0 Z"  Stroke="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,0,-1" StrokeThickness="2" Fill="{DynamicResource PrimaryHueMidBrush}"></Path>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="TopSliderTemplate"  TargetType="Slider">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" x:Name="TrackBackground" VerticalAlignment="Center" Margin="0,-10,0,0" BorderBrush="{DynamicResource PrimaryHueLightBrush}" Background="{DynamicResource PrimaryHueLightBrush}" Height="3" BorderThickness="1"/>
                <Track Grid.Row="0" x:Name="PART_Track" Margin="0,-10,0,0"  >
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderRepeatLeft}"  Command="Slider.DecreaseLarge" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SliderThumbTop}" Margin="0,15,0,0" />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderRepeatRight}" Command="Slider.IncreaseLarge" />
                    </Track.IncreaseRepeatButton>
                </Track>
                <TickBar Grid.Row="1" x:Name="Top" Fill="{DynamicResource PrimaryHueLightBrush}" SnapsToDevicePixels="True" Placement="Bottom" Height="4" Visibility="Collapsed" />
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="BottomSliderTemplate"  TargetType="Slider">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                </Grid.RowDefinitions>
                <TickBar Grid.Row="0" x:Name="BottomTick" Fill="{DynamicResource PrimaryHueLightBrush}" SnapsToDevicePixels="True" Placement="Bottom" Height="4" Visibility="Collapsed" />
                <Border Grid.Row="1" x:Name="TrackBackground" VerticalAlignment="Center" Margin="0,-10,0,0" BorderBrush="{DynamicResource PrimaryHueLightBrush}" Background="{DynamicResource PrimaryHueLightBrush}" Height="3" BorderThickness="1"/>
                <Track Grid.Row="1" x:Name="PART_Track" Margin="0,-10,0,0"  >
                    <Track.DecreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderRepeatLeft}"  Command="Slider.DecreaseLarge" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb Style="{StaticResource SliderThumbBottom}" Margin="0,0,0,13" />
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton Style="{StaticResource SliderRepeatRight}" Command="Slider.IncreaseLarge" />
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>

        <Style x:Key="TopSlider" TargetType="Slider">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template" Value="{StaticResource TopSliderTemplate}" />
        </Style>

        <Style x:Key="BottomSlider" TargetType="Slider">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="true" />
            <Setter Property="Template" Value="{StaticResource BottomSliderTemplate}" />
        </Style>

    </UserControl.Resources>

    <Grid MinWidth="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Content="{helpers:Localization EnhancedView_SplitTokenLocation}" 
               FontFamily="{DynamicResource MaterialDesignFont}"
               FontSize="16"
               HorizontalContentAlignment="Center"
               Margin="0,10,0,20"
               />

        <Slider Grid.Row="1" 
                IsSnapToTickEnabled="True"
                Maximum="{Binding TokenCharacters.Count}"
                Minimum="0"
                Style="{StaticResource TopSlider}"
                TickFrequency="1"
                Value="{Binding CharacterThreshold}" 
                VerticalAlignment="Center"
                Width="{Binding ElementName=CharactersDisplay, Path=ActualWidth}"
        />

        <userControls:TokenCharactersDisplay Grid.Row="2" x:Name="CharactersDisplay" 
                                             CharacterWidth="50"
                                             DataContext="{Binding TokenCharacters}" 
                                             FontFamily="{Binding ElementName=SplitTokenDialog, Path=DataContext.TokenFontFamily}"
                                             FontSize="40"
                                             HorizontalAlignment="Center"
                                             HorizontalContentAlignment="Center"
                                             Threshold="{Binding ElementName=CharacterSlider, Path=Value}"
                                             cm:Message.Attach="[Event CharacterClicked] = [Action CharacterClicked($this, $eventArgs)]"
/>

        <Slider Grid.Row="3" x:Name="CharacterSlider"
            IsSnapToTickEnabled="True"
            Margin="0,10,0,0"
            Maximum="{Binding TokenCharacters.Count}"
            Minimum="0"
            Style="{StaticResource BottomSlider}"
            TickFrequency="1"
            Value="{Binding CharacterThreshold}" 
            VerticalAlignment="Center"
            Width="{Binding ElementName=CharactersDisplay, Path=ActualWidth}"
            />

        <Grid Grid.Row="4" Margin="0,20,0,20"          
              Visibility="{Binding ApplyEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" 
                   Content="{helpers:Localization EnhancedView_NewToken}"
                   FontFamily="{DynamicResource MaterialDesignFont}"
                   FontSize="18"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"
                   />
            <TextBlock Grid.Row="0" Grid.Column="1" 
                       FontFamily="{Binding ElementName=SplitTokenDialog, Path=DataContext.TokenFontFamily}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Text="{Binding Subtoken1}"
                       />
            <Label Grid.Row="1" Grid.Column="0" 
                   Content="{helpers:Localization EnhancedView_NewToken}"
                   FontFamily="{DynamicResource MaterialDesignFont}"
                   FontSize="18"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0"
                   VerticalAlignment="Center"
                   />
            <TextBlock Grid.Row="1" Grid.Column="1" 
                       FontFamily="{Binding ElementName=SplitTokenDialog, Path=DataContext.TokenFontFamily}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Text="{Binding Subtoken2}"/>
        </Grid>

        <StackPanel Grid.Row="5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Button x:Name="ApplySplit" 
                    Content="{helpers:Localization EnhancedView_SplitToken}"
                    FontFamily="{DynamicResource MaterialDesignFont}"
                    FontSize="14"
                    Margin="10"
                    IsEnabled="{Binding ApplyEnabled}"
                    Style="{StaticResource TransparentStyle}"
                    />
            <Button x:Name="CancelSplit" 
                    Content="{helpers:Localization Cancel}"
                    FontFamily="{DynamicResource MaterialDesignFont}"
                    FontSize="14"
                    Margin="10"
                    IsEnabled="{Binding CancelEnabled}"
                    Style="{StaticResource TransparentStyle}"
                    />
        </StackPanel>

        <ProgressBar Grid.Row="2"
                     Grid.RowSpan="3"
                     Width="76"
                     Height="75"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Foreground="{DynamicResource SecondaryHueMidBrush}"
                     IsIndeterminate="True"
                     Style="{StaticResource MaterialDesignCircularProgressBar}"
                     Visibility="{Binding ProgressBarVisibility}"
                     Value="0" />
    </Grid>
</UserControl>
