<Window
    x:Class="ClearDashboard.Wpf.Application.Views.PopUps.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.PopUps"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AboutView"
    Width="500"
    Height="450"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Image Source="/Assets/ClearDashboard_logo_250.png" />

        <TextBlock
            Grid.Row="1"
            FontSize="26"
            HorizontalAlignment="Center"
            Text="{Binding VersionInfo}" />

        <Button
            x:Name="ClickLink"
            Height="40"
            Width="160"
            Grid.Row="2"
            Margin="10"
            Style="{StaticResource TransparentButton}">
            <TextBlock
                Cursor="Hand"
                FontSize="24"
                Foreground="DodgerBlue"
                Text="Clear Bible"
                TextDecorations="Underline" />
        </Button>
    </Grid>
</Window>
