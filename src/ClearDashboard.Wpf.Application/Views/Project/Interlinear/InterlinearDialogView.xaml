<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.Project.Interlinear.InterlinearDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="http://caliburnmicro.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers1="clr-namespace:ClearDashboard.Wpf.Application.Helpers;assembly=ClearDashboard.Wpf.Application.Abstractions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:paratextViews="clr-namespace:ClearDashboard.Wpf.Application.ViewModels.ParatextViews"
    xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=paratextViews:TextCollectionsViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    helpers1:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
    Background="{DynamicResource MaterialDesignPaper}"
    FlowDirection="{Binding WindowFlowDirection}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="_ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border
                            Name="_Border"
                            Padding="2"
                            SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="_Border" Property="Background" Value="{StaticResource SecondaryHueMidBrush}" />
                                <Setter Property="Foreground" Value="{StaticResource SecondaryHueDarkForegroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  ROW 0  -->
        <TextBlock
            Margin="10"
            Foreground="{StaticResource PrimaryHueDarkBrush}"
            Text="Select Alignment to Base this Interliner on:" />

        <!--  ROW 1  -->
        <Border
            Grid.Row="1"
            Margin="10,0,10,10"
            BorderBrush="{StaticResource PrimaryHueDarkBrush}"
            BorderThickness="2"
            CornerRadius="3">
            <ListView
                BorderBrush="{StaticResource PrimaryHueDarkBrush}"
                BorderThickness="2"
                ItemContainerStyle="{DynamicResource _ListBoxItemStyle}"
                ItemsSource="{Binding AlignmentSets}"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                SelectedItem="{Binding SelectedAlignmentSet}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch" ShowGridLines="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--<Button
                                Grid.Column="0"
                                cm:Message.Attach="SelectItem($dataContext)"
                                Style="{StaticResource TransparentStyle}">
                                Select
                            </Button>-->
                            <TextBlock
                                Grid.Column="0"
                                Margin="8,0,5,0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{Binding SmtModel}">
                                <!--<TextBlock.Style>
                                    <Style BasedOn="{StaticResource MahApps.Styles.TextBlock}" TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedAlignmentSet}" Value="" />
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>-->
                            </TextBlock>
                            <TextBlock
                                Grid.Column="1"
                                Margin="8,0,5,0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{Binding DisplayName}" />
                        </Grid>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="Create"
                Height="40"
                MaxWidth="175"
                Margin="5,0,5,0"
                Style="{StaticResource TransparentStyle}">
                Create Interlinear
            </Button>
            <Button
                x:Name="Close"
                Height="40"
                MaxWidth="175"
                Margin="5,0,5,0"
                Style="{StaticResource TransparentStyle}">
                Cancel
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
