<UserControl x:Class="ClearDashboard.Wpf.Application.Views.Project.ParallelCorpusDialog.ParallelCorpusStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Project.ParallelCorpusDialog"
             xmlns:cm="http://caliburnmicro.com"
             xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings"
             xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:parallelCorpusDialog="clr-namespace:ClearDashboard.Wpf.Application.ViewModels.Project.ParallelCorpusDialog"
             helpers:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             FlowDirection="{Binding WindowFlowDirection}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DataContext="{d:DesignInstance Type=parallelCorpusDialog:ParallelCorpusStepViewModel,
                                     IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="{x:Type TextBox}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="20,5" />
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="20,5" />
            <Setter Property="FontSize" Value="24" />
        </Style>
    </UserControl.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
    
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Top" Margin="0, 20">
            <TextBox x:Name="DisplayName"
                     materialDesign:HintAssist.FloatingScale="0.60"
                     materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                     materialDesign:HintAssist.Hint="{helpers:Localization DisplayName}"
                     materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0">
                <TextBox.Text>
                    <Binding
                    Mode="TwoWay"
                    Path="ParentViewModel.ParallelCorpus.DisplayName"
                    UpdateSourceTrigger="PropertyChanged"
                    ValidatesOnDataErrors="True" />
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel Orientation="Vertical">
                            <AdornedElementPlaceholder />
                            <TextBlock
                            MaxWidth="400"
                            Margin="10"
                            FontSize="16"
                            Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                            Text="{Binding [0].ErrorContent}"
                            TextWrapping="Wrap" />
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>

            <TextBox 
                 x:Name="JsonMetadata"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Visible"
                 materialDesign:HintAssist.FloatingScale="0.60"
                 materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                 materialDesign:HintAssist.Hint="{helpers:Localization ParallelCorpusDialog_JSON_Metadata}"
                 materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                 Visibility="{Binding ParentViewModel.DialogMode, Converter={StaticResource DialogModeToVisibilityConverter}}">
                <TextBox.Text>
                    <Binding
                    Mode="TwoWay"
                    Path="ParentViewModel.ParallelCorpus.Metadata"
                    UpdateSourceTrigger="PropertyChanged"
                    ValidatesOnDataErrors="True" />
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel Orientation="Vertical">
                            <AdornedElementPlaceholder />
                            <TextBlock
                            MaxWidth="400"
                            Margin="10"
                            FontSize="16"
                            Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                            Text="{Binding [0].ErrorContent}"
                            TextWrapping="Wrap" />
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>

            <TextBox 
                 x:Name="VerseMappings"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Visible"
                 
                 materialDesign:HintAssist.FloatingScale="0.60"
                 materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                 materialDesign:HintAssist.Hint="{helpers:Localization ParallelCorpusDialog_VerseMappings}"
                 materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                 Visibility="{Binding ParentViewModel.DialogMode, Converter={StaticResource DialogModeToVisibilityConverter}}">
                <TextBox.Text>
                    <Binding
                    Mode="TwoWay"
                    Path="ParentViewModel.ParallelCorpus.VerseMappings"
                    UpdateSourceTrigger="PropertyChanged"
                    ValidatesOnDataErrors="True" />
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel Orientation="Vertical">
                            <AdornedElementPlaceholder />
                            <TextBlock
                            MaxWidth="400"
                            Margin="10"
                            FontSize="16"
                            Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                            Text="{Binding [0].ErrorContent}"
                            TextWrapping="Wrap" />
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>

            <TextBox x:Name="CreatedBy"
                    IsEnabled="False"
                    materialDesign:HintAssist.FloatingScale="0.60"
                     materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                     materialDesign:HintAssist.Hint="{helpers:Localization CreatedBy}"
                     materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                     Visibility="{Binding ParentViewModel.DialogMode, Converter={StaticResource DialogModeToVisibilityConverter}}">
                <TextBox.Text>
                    <Binding
                    Mode="TwoWay"
                    Path="ParentViewModel.ParallelCorpus.User.FullName"
                    UpdateSourceTrigger="PropertyChanged"
                    ValidatesOnDataErrors="True" />
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel Orientation="Vertical">
                            <AdornedElementPlaceholder />
                            <TextBlock
                            MaxWidth="400"
                            Margin="10"
                            FontSize="16"
                            Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                            Text="{Binding [0].ErrorContent}"
                            TextWrapping="Wrap" />
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>
            <TextBox x:Name="Created"
                     IsEnabled="False"
                     materialDesign:HintAssist.FloatingScale="0.60"
                     materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                     materialDesign:HintAssist.Hint="{helpers:Localization Created}"
                     materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                     Visibility="{Binding ParentViewModel.DialogMode, Converter={StaticResource DialogModeToVisibilityConverter}}">
                <TextBox.Text>
                    <Binding
                    Mode="TwoWay"
                    Path="ParentViewModel.ParallelCorpus.Created"
                    UpdateSourceTrigger="PropertyChanged"
                    ValidatesOnDataErrors="True" />
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel Orientation="Vertical">
                            <AdornedElementPlaceholder />
                            <TextBlock
                            MaxWidth="400"
                            Margin="10"
                            FontSize="16"
                            Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                            Text="{Binding [0].ErrorContent}"
                            TextWrapping="Wrap" />
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Margin="20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <!--<Button
                x:Name="MoveBackwards"
                Margin="5,5,5,5"
                cm:Message.Attach="MoveBackwards"
                Content="{helpers:Localization Back}"
                IsEnabled="{Binding EnableControls}"
                Style="{StaticResource TransparentStyle}">
            </Button>-->
            <!--<Button
                x:Name="MoveForwards"
                Content="{helpers:Localization Next}" 
                IsDefault="True"
                Style="{StaticResource TransparentStyle}"/>-->
            <!--<Button
                x:Name="Ok"
                Content="{helpers:Localization Ok}" 
                IsDefault="True"
                Style="{StaticResource TransparentStyle}"/>-->
            <!--<Button
                x:Name="Ok"
                Content="{helpers:Localization Create}" 
                IsDefault="True"
                Style="{StaticResource TransparentStyle}"/>-->
            <Button x:Name="Create"  
                    Style="{StaticResource TransparentStyle}"
                    Content="{helpers:Localization Create}" 
                    IsDefault="True"
                    IsEnabled="{Binding ParentViewModel.IsBusy, Converter={StaticResource BooleanInversionConverter}}">
                <!--<Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            --><!--<ProgressBar Value="10" Maximum="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>--><!--
                            <Label Content="{helpers:Localization Create}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>-->
            </Button>
</StackPanel>
    </Grid>
</UserControl>
