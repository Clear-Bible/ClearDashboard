<Page
    x:Class="ClearDashboard.Wpf.Application.Views.Startup.StartupDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="http://caliburnmicro.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StartupDialogView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <!--<Button x:Name="GoToMain" cm:Message.Attach="GoToMain"  Background="{DynamicResource BlueDarkBrush}" Width="120">Go to Main</Button>-->
        <ContentControl cm:View.Model="{Binding ActiveItem}" />
        <Grid  Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" ZIndex="100" >
            <StackPanel>
                <TextBlock Text="My fancy overlay." FontSize="100" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                <Button Style="{StaticResource TransparentButton}" Foreground="Black" Content="OK" Width="50"></Button>
            </StackPanel>
        
        </Grid>
    </Grid>
</Page>
