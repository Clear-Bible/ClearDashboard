<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.Startup.ProjectSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Startup"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings"
    xmlns:helpers1="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    helpers1:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
    Background="{DynamicResource MaterialDesignPaper}"
    FlowDirection="{Binding WindowFlowDirection}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>

        <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,10" />
            <Setter Property="FontSize" Value="24" />
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="Create New Project" />
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,40"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <TextBox
                x:Name="ProjectName"
                MinWidth="400"
                VerticalAlignment="Center"
                materialDesign:HintAssist.FloatingScale="0.50"
                materialDesign:HintAssist.Foreground="{DynamicResource PrimaryHueDarkBrush}"
                materialDesign:HintAssist.Hint="{helpers:Localization NewProjectDialogView_EnterName}"
                materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                FontSize="20"
                Foreground="{DynamicResource PrimaryHueDarkBrush}"
               Style="{StaticResource MaterialDesignFloatingHintTextBox}">

               
                <TextBox.Text>
                    <Binding
                        Mode="TwoWay"
                        Path="ProjectName"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True" />
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel Orientation="Vertical">
                            <AdornedElementPlaceholder />
                            <TextBlock
                                MaxWidth="400"
                                Margin="10"
                                FontSize="16"
                                Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                Text="{Binding [0].ErrorContent}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>

        </StackPanel>

        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                x:Name="MoveBackwards"
                Grid.Row="2"
                Grid.Column="0"
                Width="100"
                Margin="5,5,5,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                cal:Message.Attach="MoveBackwards"
                IsEnabled="{Binding EnableControls}">
                <StackPanel Orientation="Horizontal">
                    <Viewbox MaxWidth="50" MaxHeight="50" />
                    <TextBlock VerticalAlignment="Center" Text="Back" />
                </StackPanel>
            </Button>
            <Button
                x:Name="Create"
                Grid.Row="3"
                Grid.Column="1"
                Width="100"
                VerticalAlignment="Center"
                Content="Create" />
        </StackPanel>
       
    </Grid>
