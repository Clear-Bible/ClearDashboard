<UserControl x:Class="ClearDashboard.Wpf.Application.Views.Startup.ProjectSetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Startup"
             mc:Ignorable="d" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Margin="10"
            FontSize="25"
            Text="Create a new project" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Listview of template options goes here?" />

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Name:" 
                HorizontalAlignment="Right"/>
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Height="28"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="what do you want to name your project?"
                BorderBrush="Black"
                BorderThickness="1" 
                Margin="5"
                Padding="5"/>
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Type:" 
                 HorizontalAlignment="Right"/>
            <ComboBox
                Grid.Row="1"
                Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1" 
                Margin="5"
                Padding="5" 
                materialDesign:HintAssist.Hint="what type of project is this?">
                <ComboBoxItem Content="Type 1"/>
                <ComboBoxItem Content="Type 2"/>
            </ComboBox>
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Text="Tokenizer:" 
                 HorizontalAlignment="Right"/>
            <ComboBox
                Grid.Row="2"
                Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1" 
                Margin="5"
                Padding="5"
                materialDesign:HintAssist.Hint="what tokenization method do you want to use?">
                <ComboBoxItem Content="Tokenizer 1"/>
                <ComboBoxItem Content="Tokenizer 2"/>
            </ComboBox>
            <StackPanel Orientation="Horizontal"  Grid.Row="3"
                Grid.Column="1" HorizontalAlignment="Right">

                <Button
            HorizontalAlignment="Left"
            Width="100"
            Grid.Row="2"
            Grid.Column="0"
            x:Name="MoveBackwards"
            Margin="5,5,5,5"
            VerticalAlignment="Center"
            cal:Message.Attach="MoveBackwards"
            IsEnabled="{Binding EnableControls}">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox MaxWidth="50" MaxHeight="50">

                        </Viewbox>
                        <TextBlock VerticalAlignment="Center" Text="Back" />
                    </StackPanel>
                </Button>
                <Button x:Name="Create"
                Width="100"
                Grid.Row="3"
                Grid.Column="1"
                VerticalAlignment="Center"
                Content="Create" />
            </StackPanel>

        </Grid>


    </Grid>
</UserControl>
