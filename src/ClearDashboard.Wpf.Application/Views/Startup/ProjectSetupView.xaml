<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.Startup.ProjectSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    xmlns:helpers1="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Startup"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings"
    Width="1010"
    Height="635"
    d:DesignHeight="450"
    d:DesignWidth="800"
    helpers1:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
    Background="{DynamicResource MaterialDesignPaper}"
    FlowDirection="{Binding WindowFlowDirection}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignTextBox}" TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="0,8" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style TargetType="Label">
            <!--<Setter Property="Foreground" Value="{DynamicResource PrimaryHueDarkBrush}" />-->
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,10" />
            <Setter Property="FontSize" Value="24" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="425" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="44,0,0,25"
            Content="Create a new project"
            FontSize="34" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="51,0,0,0"
            VerticalAlignment="Top"
            Content="Recent project templates"
            FontSize="19" />

        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Width="354"
            Height="33"
            Padding="3"
            HorizontalAlignment="Left"
            VerticalContentAlignment="Center"
            materialDesign:HintAssist.Hint="Search recent"
            BorderBrush="DarkGray"
            BorderThickness="1"
            Text="{Binding SearchText, Mode=TwoWay}" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Orientation="Horizontal">
            <ComboBox
                Width="160"
                Margin="10,0"
                materialDesign:HintAssist.Hint="options">
                <ComboBoxItem Content="option 1" />
                <ComboBoxItem Content="option 2" />
            </ComboBox>

            <ComboBox
                Width="160"
                Margin="10,0"
                materialDesign:HintAssist.Hint="more options">
                <ComboBoxItem Content="option 1" />
                <ComboBoxItem Content="option 2" />
            </ComboBox>

            <ComboBox
                Width="160"
                Margin="10,0"
                materialDesign:HintAssist.Hint="kinds">
                <ComboBoxItem Content="option 1" />
                <ComboBoxItem Content="option 2" />
            </ComboBox>
        </StackPanel>


        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBox
                x:Name="ProjectName"
                MinWidth="400"
                VerticalAlignment="Center"
                materialDesign:HintAssist.FloatingScale="0.50"
                materialDesign:HintAssist.Foreground="{DynamicResource PrimaryHueDarkBrush}"
                materialDesign:HintAssist.Hint="{helpers:Localization NewProjectDialogView_EnterName}"
                materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                FontSize="20"
                Foreground="{DynamicResource PrimaryHueDarkBrush}"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}">


                <TextBox.Text>
                    <Binding
                        Mode="TwoWay"
                        Path="ProjectName"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True" />
                </TextBox.Text>
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel Orientation="Vertical">
                            <AdornedElementPlaceholder />
                            <TextBlock
                                MaxWidth="400"
                                Margin="10"
                                FontSize="16"
                                Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                Text="{Binding [0].ErrorContent}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>

            </TextBox>

        </StackPanel>

        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Margin="50,50,50,30"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                x:Name="MoveBackwards"
                Width="90"
                Margin="7"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                cal:Message.Attach="MoveBackwards"
                Background="LightGray"
                BorderThickness="0"
                IsEnabled="True">
                <StackPanel Orientation="Horizontal">
                    <Viewbox MaxWidth="50" MaxHeight="50" />
                    <TextBlock VerticalAlignment="Center" Text="Back" />
                </StackPanel>
            </Button>
            <Button
                x:Name="Create"
                Width="90"
                Margin="7"
                VerticalAlignment="Center"
                Background="LightGray"
                BorderThickness="0"
                Content="Create" />
        </StackPanel>

    </Grid>
