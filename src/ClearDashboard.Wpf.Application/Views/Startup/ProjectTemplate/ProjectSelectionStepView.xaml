<UserControl x:Class="ClearDashboard.Wpf.Application.Views.Startup.ProjectTemplate.ProjectSelectionStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Startup.ProjectTemplate"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:controls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
             xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers;assembly=ClearDashboard.Wpf.Application.Abstractions"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings"
             Width="1010"
             Height="635"
             d:DesignHeight="450"
             d:DesignWidth="800"
             helpers:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
             Background="{DynamicResource MaterialDesignPaper}"
             FlowDirection="{Binding WindowFlowDirection}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="150" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Grid.Row="1" Content="{helpers:Localization ProjectSetup_Title}" />
            <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Margin="24,10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical">
                <TextBox
                x:Name="ProjectName"
                MinWidth="400"
                VerticalAlignment="Center"
                materialDesign:HintAssist.FloatingScale="0.60"
                materialDesign:HintAssist.Foreground="{DynamicResource MaterialDesignBody}"
                materialDesign:HintAssist.Hint="{helpers:Localization NewProjectDialogView_EnterName}"
                materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                FontSize="20"
                Foreground="{DynamicResource MaterialDesignBody}"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                    <TextBox.Text>
                        <Binding
                        Mode="TwoWay"
                        Path="ProjectName"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True" />
                    </TextBox.Text>
                    <Validation.ErrorTemplate>
                        <ControlTemplate>
                            <StackPanel Orientation="Vertical">
                                <AdornedElementPlaceholder />
                                <TextBlock
                                MaxWidth="400"
                                Margin="10"
                                FontSize="16"
                                Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                                Text="{Binding [0].ErrorContent}"
                                TextWrapping="Wrap" />
                            </StackPanel>
                        </ControlTemplate>
                    </Validation.ErrorTemplate>
                </TextBox>
            </StackPanel>

        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Label Margin="0,0,0,-10" Content="Paratext Project" />
            <StackPanel Orientation="Horizontal">
                <controls:AutoCompleteComboBox
                        Height="Auto"
                        Width="400"
                        Margin="15"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        cal:Message.Attach="ParatextProjectSelected"
                        materialDesign:HintAssist.Hint="Paratext Project"
                        FontSize="16"
                        IsEnabled="{Binding IsEnabledSelectedParatextProject}"
                        ItemsSource="{Binding ParatextProjects}"
                        ScrollViewer.CanContentScroll="False"
                        SelectedItem="{Binding SelectedParatextProject, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignFilledComboBox}"
                        TextSearch.TextPath="CombinedName">
                    <controls:AutoCompleteComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontSize="12" Text="{Binding CorpusTypeDisplay}" />
                                <TextBlock FontSize="24" Text="{Binding Name}" />
                                <TextBlock FontSize="12" Text="{Binding LongName}" />
                                <TextBlock FontSize="10" Text="{Binding Id}" />
                            </StackPanel>
                        </DataTemplate>
                    </controls:AutoCompleteComboBox.ItemTemplate>
                </controls:AutoCompleteComboBox>
                <Button
                    x:Name="ClearSelectedParatextProject"
                    Margin="5,5,5,5"
                    Width="100"
                    cal:Message.Attach="ClearSelectedParatextProject"
                    Style="{StaticResource TransparentStyle}">
                    <materialDesign:PackIcon
                            Width="36"
                            Height="36"
                            Foreground="{StaticResource BlueMidBrush}"
                            Kind="CloseBox" />
                </Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Vertical">
            <Label Margin="0,0,0,-10" Content="PT Back Translation" />
            <StackPanel Orientation="Horizontal">
                <controls:AutoCompleteComboBox
                    Height="Auto"
                    Width="400"
                    Margin="15"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    cal:Message.Attach="ParatextBtProjectSelected"
                    materialDesign:HintAssist.Hint="Paratext Back Translation"
                    FontSize="16"
                    IsEnabled="{Binding IsEnabledSelectedParatextBtProject}"
                    ItemsSource="{Binding ParatextBtProjects}"
                    ScrollViewer.CanContentScroll="False"
                    SelectedItem="{Binding SelectedParatextBtProject, Mode=TwoWay}"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    TextSearch.TextPath="CombinedName">
                    <controls:AutoCompleteComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontSize="12" Text="{Binding CorpusTypeDisplay}" />
                                <TextBlock FontSize="24" Text="{Binding Name}" />
                                <TextBlock FontSize="12" Text="{Binding LongName}" />
                                <TextBlock FontSize="10" Text="{Binding Id}" />
                            </StackPanel>
                        </DataTemplate>
                    </controls:AutoCompleteComboBox.ItemTemplate>
                </controls:AutoCompleteComboBox>
                <Button
                    x:Name="ClearSelectedParatextBtProject"
                    Margin="5,5,5,5"
                    Width="100"
                    cal:Message.Attach="ClearSelectedParatextBtProject"
                    Style="{StaticResource TransparentStyle}">
                    <materialDesign:PackIcon
                            Width="36"
                            Height="36"
                            Foreground="{StaticResource BlueMidBrush}"
                            Kind="CloseBox" />
                </Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Vertical">
            <Label Margin="0,0,0,-10" Content="Interlinear Bible (LWC)" />
            <StackPanel Orientation="Horizontal">
                <controls:AutoCompleteComboBox
                    Height="Auto"
                    Margin="15"
                    Width="400"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    cal:Message.Attach="ParatextLwcProjectSelected"
                    materialDesign:HintAssist.Hint="Paratext Interlinear Bible (LWC)"
                    FontSize="16"
                    IsEnabled="{Binding IsEnabledSelectedParatextLwcProject}"
                    ItemsSource="{Binding ParatextLwcProjects}"
                    ScrollViewer.CanContentScroll="False"
                    SelectedItem="{Binding SelectedParatextLwcProject, Mode=TwoWay}"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    TextSearch.TextPath="CombinedName">
                    <controls:AutoCompleteComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontSize="12" Text="{Binding CorpusTypeDisplay}" />
                                <TextBlock FontSize="24" Text="{Binding Name}" />
                                <TextBlock FontSize="12" Text="{Binding LongName}" />
                                <TextBlock FontSize="10" Text="{Binding Id}" />
                            </StackPanel>
                        </DataTemplate>
                    </controls:AutoCompleteComboBox.ItemTemplate>
                </controls:AutoCompleteComboBox>
                <Button
                    x:Name="ClearSelectedParatextLwcProject"
                    Margin="5,5,5,5"
                    Width="100"
                    cal:Message.Attach="ClearSelectedParatextLwcProject"
                    Style="{StaticResource TransparentStyle}">
                    <materialDesign:PackIcon
                            Width="36"
                            Height="36"
                            Foreground="{StaticResource BlueMidBrush}"
                            Kind="CloseBox" />
                </Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="5"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
            <CheckBox x:Name="ShowBiblicalTextsCheckBox"
                      Margin="10,20,0,20"
                      FontSize="13"
                      IsChecked="{Binding ShowBiblicalTexts, Mode=TwoWay}">
                Show Biblical Texts
                <CheckBox.ToolTip>If checked, this will ...</CheckBox.ToolTip>
            </CheckBox>
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Grid.Column="0"
            Margin="20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                x:Name="MoveBackwards"
                Margin="5,5,5,5"
                cal:Message.Attach="MoveBackwards"
                Content="{helpers:Localization Back}"
                IsEnabled="{Binding CanMoveBackwards}"
                Style="{StaticResource TransparentStyle}" />
            <Button
                x:Name="MoveForwards"
                cal:Message.Attach="MoveForwards"
                Content="{helpers:Localization Next}"
                IsEnabled="{Binding CanMoveForwards}"
                IsDefault="True"
                Style="{StaticResource TransparentStyle}" />
        </StackPanel>

    </Grid>
</UserControl>
