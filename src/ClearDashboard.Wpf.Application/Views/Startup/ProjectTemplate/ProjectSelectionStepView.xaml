<UserControl x:Class="ClearDashboard.Wpf.Application.Views.Startup.ProjectTemplate.ProjectSelectionStepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Startup.ProjectTemplate"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:controls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
             xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers;assembly=ClearDashboard.Wpf.Application.Abstractions"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings"
             Width="1010"
             Height="635"
             d:DesignHeight="450"
             d:DesignWidth="800"
             helpers:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
             Background="{DynamicResource MaterialDesignPaper}"
             FlowDirection="{Binding WindowFlowDirection}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             mc:Ignorable="d"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Margin="0,0,0,-10" Content="Paratext Project" />
            <controls:AutoCompleteComboBox
                    Height="Auto"
                    Margin="15"
                    VerticalAlignment="Top"
                    cal:Message.Attach="ParatextProjectSelected"
                    materialDesign:HintAssist.Hint="Paratext Project"
                    FontSize="16"
                    IsEnabled="{Binding IsEnabledSelectedParatextProject}"
                    ItemsSource="{Binding Projects}"
                    ScrollViewer.CanContentScroll="False"
                    SelectedItem="{Binding SelectedParatextProject}"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    TextSearch.TextPath="CombinedName">
                <controls:AutoCompleteComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="{Binding CorpusTypeDisplay}" />
                            <TextBlock FontSize="24" Text="{Binding Name}" />
                            <TextBlock FontSize="12" Text="{Binding LongName}" />
                            <TextBlock FontSize="10" Text="{Binding Id}" />
                        </StackPanel>
                    </DataTemplate>
                </controls:AutoCompleteComboBox.ItemTemplate>
            </controls:AutoCompleteComboBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Label Margin="0,0,0,-10" Content="PT Back Translation" />
            <controls:AutoCompleteComboBox
                    Height="Auto"
                    Margin="15"
                    VerticalAlignment="Top"
                    cal:Message.Attach="ParatextBtProjectSelected"
                    materialDesign:HintAssist.Hint="Paratext Back Translation"
                    FontSize="16"
                    IsEnabled="{Binding IsEnabledSelectedParatextBtProject}"
                    ItemsSource="{Binding Projects}"
                    ScrollViewer.CanContentScroll="False"
                    SelectedItem="{Binding SelectedParatextBtProject}"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    TextSearch.TextPath="CombinedName">
                <controls:AutoCompleteComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="{Binding CorpusTypeDisplay}" />
                            <TextBlock FontSize="24" Text="{Binding Name}" />
                            <TextBlock FontSize="12" Text="{Binding LongName}" />
                            <TextBlock FontSize="10" Text="{Binding Id}" />
                        </StackPanel>
                    </DataTemplate>
                </controls:AutoCompleteComboBox.ItemTemplate>
            </controls:AutoCompleteComboBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Vertical">
            <Label Margin="0,0,0,-10" Content="Interlinear Bible (LWC)" />
            <controls:AutoCompleteComboBox
                    Height="Auto"
                    Margin="15"
                    VerticalAlignment="Top"
                    cal:Message.Attach="ParatextLwcProjectSelected"
                    materialDesign:HintAssist.Hint="Paratext Interlinear Bible (LWC)"
                    FontSize="16"
                    IsEnabled="{Binding IsEnabledSelectedParatextLwcProject}"
                    ItemsSource="{Binding Projects}"
                    ScrollViewer.CanContentScroll="False"
                    SelectedItem="{Binding SelectedParatextLwcProject}"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    TextSearch.TextPath="CombinedName">
                <controls:AutoCompleteComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="{Binding CorpusTypeDisplay}" />
                            <TextBlock FontSize="24" Text="{Binding Name}" />
                            <TextBlock FontSize="12" Text="{Binding LongName}" />
                            <TextBlock FontSize="10" Text="{Binding Id}" />
                        </StackPanel>
                    </DataTemplate>
                </controls:AutoCompleteComboBox.ItemTemplate>
            </controls:AutoCompleteComboBox>
        </StackPanel>
        <StackPanel Grid.Row="4"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
            <CheckBox x:Name="ShowBiblicalTextsCheckBox"
                      Margin="10,20,0,20"
                      FontSize="13"
                      IsChecked="{Binding ShowBiblicalTexts}">
                Show Biblical Texts
                <CheckBox.ToolTip>If checked, this will ...</CheckBox.ToolTip>
            </CheckBox>
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Grid.Column="0"
            Margin="20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">

            <Button
                x:Name="MoveBackwards"
                Margin="5,5,5,5"
                cal:Message.Attach="MoveBackwards"
                Content="{helpers:Localization Back}"
                IsEnabled="{Binding EnableControls}"
                Style="{StaticResource TransparentStyle}" />
            <Button
                x:Name="MoveForwards"
                cal:Message.Attach="MoveForwards"
                Content="{helpers:Localization Next}"
                IsEnabled="{Binding EnableControls}"
                IsDefault="True"
                Style="{StaticResource TransparentStyle}" />
        </StackPanel>

    </Grid>
</UserControl>
