<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.Startup.ProjectPickerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:applicationConverters="clr-namespace:ClearDashboard.Wpf.Application.Converters"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:converters="clr-namespace:ClearApplicationFoundation.Framework.Converters;assembly=ClearApplicationFoundation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers;assembly=ClearDashboard.Wpf.Application.Abstractions"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ClearDashboard.Wpf.Application.Models"
    xmlns:resx="clr-namespace:ClearDashboard.Wpf.Application.Strings;assembly=ClearDashboard.Wpf.Application.Abstractions"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:userControls="clr-namespace:ClearDashboard.Wpf.Application.UserControls"
    x:Name="UserControl"
    Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type materialDesign:DialogHost}}, Path=ActualWidth}"
    Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type materialDesign:DialogHost}}, Path=ActualHeight}"
    MaxWidth="1140"
    MaxHeight="800"
    d:DesignHeight="450"
    d:DesignWidth="800"
    helpers:Translation.ResourceManager="{x:Static resx:Resources.ResourceManager}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <applicationConverters:BooleanInversionConverter x:Key="BooleanInversionConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <applicationConverters:WidthSubtraction x:Key="WidthSubtraction" />
            <applicationConverters:BooleanAndConverter x:Key="BooleanAndConverter" />
            <system:Boolean x:Key="True">True</system:Boolean>
            <system:Boolean x:Key="False">False</system:Boolean>
            <Style
                x:Key="EmptyMaterialDesignListView"
                BasedOn="{StaticResource MaterialDesignListView}"
                TargetType="ListView">
                <Style.Triggers>
                    <!--  Use ListBox.HasItems instead of Binding  -->
                    <Trigger Property="HasItems" Value="False">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <materialDesign:Card
                                        Width="475"
                                        Height="81"
                                        Margin="0,0,0,0"
                                        VerticalAlignment="Top"
                                        materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                        Background="#EEEBEB">
                                        <StackPanel
                                            Margin="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Label Margin="15" FontSize="21">It's lonely here.  Please create a new project.</Label>
                                            <iconPacks:PackIconMaterial
                                                Width="24"
                                                Height="24"
                                                Margin="0,0,20,00"
                                                VerticalAlignment="Center"
                                                Kind="ArrowRight" />
                                        </StackPanel>
                                    </materialDesign:Card>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid
        x:Name="GridLayout"
        Background="White"
        ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="575" MinWidth="550" />
            <ColumnDefinition
                Width="*"
                MinWidth="250"
                MaxWidth="600" />
        </Grid.ColumnDefinitions>

        <!--  Logo / Dashboard Name  -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,0"
            Orientation="Horizontal">
            <Image
                Width="50"
                Height="50"
                Margin="20,0"
                HorizontalAlignment="Left"
                Source="../../Assets/ClearDashboard_logo_50.png" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="32"
                Text="{helpers:Localization ProjectPicker_AppName}" />
        </StackPanel>

        <!--  Paratext Not Installed  -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="15,0,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal"
            Visibility="{Binding IsParatextInstalled, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter={StaticResource True}}">
            <Image
                Width="36"
                Height="36"
                Margin="0,0,5,0">
                <Image.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Connected}" Value="True">
                                <Setter Property="Image.Source" Value="/Resources/Paratext_Connected32.png" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Connected}" Value="False">
                                <Setter Property="Image.Source" Value="/Resources/Paratext_Disconnected32.png" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <TextBlock
                Width="490"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="{helpers:Localization ProjectPicker_NotInstalled}"
                TextWrapping="Wrap" />
        </StackPanel>

        <!--  Paratext User  -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="15,0,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal"
            Visibility="{Binding IsParatextInstalled, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter={StaticResource False}}">
            <Image
                Width="36"
                Height="36"
                Margin="0,0,5,0"
                Visibility="{Binding IsParatextRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter={StaticResource False}}">
                <Image.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Connected}" Value="True">
                                <Setter Property="Image.Source" Value="/Resources/Paratext_Connected32.png" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Connected}" Value="False">
                                <Setter Property="Image.Source" Value="/Resources/Paratext_Disconnected32.png" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <StackPanel Orientation="Horizontal" Visibility="{Binding IsParatextRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter={StaticResource False}}">
                <TextBlock
                    x:Name="NotConnectedText"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    Text="{helpers:Localization ProjectPicker_ParatextOnNotConnected}"
                    TextWrapping="Wrap"
                    Visibility="{Binding Connected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter={StaticResource True}}" />
                <TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource PrimaryHueMidBrush}"
                    Visibility="{Binding Connected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter={StaticResource False}}">
                    <Run Text="{helpers:Localization ProjectPicker_Paratext}" />
                    <Run Text="{helpers:Localization ShellView_User}" />
                </TextBlock>
                <TextBlock
                    x:Name="ParatextUserName"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    d:Text="Joe Schmoe"
                    TextWrapping="Wrap"
                    Visibility="{Binding Connected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter={StaticResource False}}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Visibility="{Binding IsParatextRunning, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter={StaticResource True}}">
                <!--<TextBlock
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Foreground="{DynamicResource PrimaryHueMidBrush}">
                    <Run Text="Paratext is not running" />
                </TextBlock>-->
                <Button
                    x:Name="StartParatext"
                    Width="340"
                    Height="60"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Bottom"
                    cal:Message.Attach="StartParatext"
                    Style="{StaticResource TransparentStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="30" Height="30">
                            <Image.Style>
                                <Style>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Connected}" Value="True">
                                            <Setter Property="Image.Source" Value="/Resources/Paratext_Connected32.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Connected}" Value="False">
                                            <Setter Property="Image.Source" Value="/Resources/Paratext_Disconnected32.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <StackPanel
                            Margin="15,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{helpers:Localization ProjectPicker_NotRunning}" />
                            <TextBlock HorizontalAlignment="Center" Text="{helpers:Localization ProjectPicker_StartParatext}" />
                        </StackPanel>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <Line
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Stroke="{StaticResource PrimaryHueMidBrush}"
            StrokeThickness="3"
            X1="20"
            X2="{Binding ElementName=UserControl, Path=ActualWidth, Converter={applicationConverters:WidthSubtraction}, ConverterParameter='20'}"
            Y1="75"
            Y2="75" />


        <!--  Get Started  -->
        <StackPanel Grid.Row="1">
            <Label
                Margin="40,0,0,0"
                Content="{helpers:Localization ProjectPicker_GetStarted}"
                FontSize="19"
                FontWeight="Medium" />
            <Button
                x:Name="MoveForwards"
                Width="340"
                Height="60"
                Margin="10,5,40,10"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                cal:Message.Attach="MoveForwards"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Background="DarkGray"
                BorderThickness="0"
                IsEnabled="{Binding Connected}"
                Style="{StaticResource TransparentStyle}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="30"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Source="../../Assets/newproject.png" />
                    <StackPanel Orientation="Vertical">
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="19"
                            FontWeight="Normal"
                            Text="{helpers:Localization ProjectPicker_CreateNewProject}" />
                        <TextBlock
                            Margin="0,2"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontWeight="Light"
                            Text="{helpers:Localization ProjectPicker_CreateLong}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  Open Recent  -->
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="40,0,0,0"
                FontSize="19"
                FontWeight="Medium"
                Text="{helpers:Localization ProjectPicker_OpenRecent}" />
            <TextBox
                x:Name="SearchText"
                Grid.Row="1"
                Width="320"
                Height="30"
                Margin="54,10,0,10"
                Padding="3"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                materialDesign:HintAssist.Hint="{helpers:Localization ProjectPicker_SearchRecent}"
                materialDesign:TextFieldAssist.HasClearButton="True"
                BorderBrush="DarkGray"
                BorderThickness="1"
                IsEnabled="{Binding Connected}">
                <TextBox.Text>
                    <Binding
                        Mode="TwoWay"
                        Path="SearchText"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True" />
                </TextBox.Text>
            </TextBox>

            <materialDesign:Card
                Grid.Row="2"
                Width="475"
                Height="60"
                Margin="5"
                HorizontalAlignment="Center"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Background="#EEEBEB"
                Visibility="{Binding SearchBlankVisibility}">
                <Label
                    Margin="15"
                    VerticalAlignment="Center"
                    Content="{helpers:Localization ProjectPicker_NoMatches}"
                    FontSize="21" />
            </materialDesign:Card>
            <Button
                x:Name="CreateProjectFromSearchText"
                Grid.Row="3"
                Width="475"
                Height="60"
                Margin="15"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                cal:Message.Attach="Create"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Background="#EEEBEB"
                BorderThickness="0"
                FontSize="21"
                IsEnabled="{Binding Connected}"
                Style="{StaticResource TransparentStyle}"
                Visibility="{Binding SearchBlankVisibility}">
                <TextBlock HorizontalAlignment="Left" TextAlignment="Left">
                    <Run Text="{helpers:Localization ProjectPicker_CreateProject}" />
                    <Run Text="'" />
                    <Run Text="{Binding SearchText}" />
                    <Run Text="'" />
                </TextBlock>
            </Button>

            <ListView
                x:Name="ProjectListView"
                Grid.Row="4"
                Margin="5"
                IsEnabled="{Binding Connected}"
                ItemsSource="{Binding DashboardProjectsDisplay}"
                ScrollViewer.CanContentScroll="False"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                Visibility="{Binding NoProjectVisibility}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--  This was changed from a card to a border to handle Jira DI 96  -->
                        <Border
                            Width="532"
                            cal:Message.Attach="[Event MouseDown]=[Action NavigateToMainViewModel($dataContext, $eventArgs)]"
                            materialDesign:ShadowAssist.ShadowDepth="Depth0"
                            Background="Transparent"
                            IsEnabled="{Binding IsClosed}"
                            Tag="{Binding DataContext, ElementName=GridLayout}">
                            <Border.ContextMenu>
                                <ContextMenu cal:Action.TargetWithoutContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                    <MenuItem cal:Message.Attach="DeleteProject($dataContext)" Header="{helpers:Localization ProjectPicker_DeleteProject}" />
                                </ContextMenu>
                            </Border.ContextMenu>
                            <StackPanel Orientation="Horizontal">
                                <Grid Width="450" ShowGridLines="False">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--<StackPanel
                                        Grid.RowSpan="4"
                                        Grid.Column="0"
                                        Orientation="Vertical">
                                        <Image
                                            Height="30"
                                            Margin="5,0,5,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Source="../../Assets/ClearDashboard_logo_50.png" />-->
                                    <Image
                                        Grid.RowSpan="4"
                                        Grid.Column="0"
                                        Height="30"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Image.Style>
                                            <Style TargetType="{x:Type Image}">
                                                <Setter Property="Source" Value="../../Assets/ClearDashboard_logo_50.png" />
                                                <Setter Property="Height" Value="30" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCollabProject}" Value="True">
                                                        <Setter Property="Source" Value="../../Assets/ClearCollabIcon.png" />
                                                        <Setter Property="Width" Value="30" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                    </Image>
                                    <!--</StackPanel>-->


                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="14"
                                        FontWeight="DemiBold">
                                        <Run Text="{helpers:Localization ProjectPicker_Project}" />
                                        <Run Text="{Binding ProjectName}" />
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Width="145"
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Text="{Binding Modified}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2">
                                        <Run FontSize="11" Text="{helpers:Localization ProjectPicker_Database}" />
                                        <Run FontSize="11" Text="{Binding CompactFilePath, Mode=OneTime}" />
                                    </TextBlock>

                                    <TextBlock Grid.Row="2" Grid.Column="1">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompatibleVersion}" Value="False">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run FontSize="11" Text="{helpers:Localization ProjectPicker_Version}" />
                                        <Run FontSize="11" Text="{Binding Version}" />
                                    </TextBlock>

                                    <!--<TextBlock
                                        Grid.Row="2"
                                        Grid.Column="2">
                                        <Run FontSize="11" Text="Access Level:" FontWeight="DemiBold" />
                                        <Run FontSize="11" Text="{Binding PermissionLevel}" />
                                    </TextBlock>-->

                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        VerticalAlignment="Center"
                                        FontStyle="Italic">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource YellowDarkBrush}" />
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PermissionLevel}" Value="Owner">
                                                        <Setter Property="Foreground" Value="{StaticResource IndigoMidBrush}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PermissionLevel}" Value="ReadWrite">
                                                        <Setter Property="Foreground" Value="{StaticResource GreenDarkBrush}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PermissionLevel}" Value="None">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run
                                            FontSize="11"
                                            FontWeight="DemiBold"
                                            Text="Access Level:" />
                                        <Run FontSize="11" Text="{Binding PermissionLevel}" />
                                    </TextBlock>

                                    <Button
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        cal:Message.Attach="UpdateDatabase($dataContext)"
                                        Content="Database Update Needed">
                                        <Button.Style>
                                            <Style BasedOn="{StaticResource MaterialDesignRaisedSecondaryButton}" TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NeedsMigrationUpgrade}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2"
                                        Padding="2"
                                        Background="{StaticResource GreenLightBrush}"
                                        TextAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding GitLabUpdateNeeded}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="{helpers:Localization MainView_RemoteUpdateAvailable}" />
                                    </TextBlock>

                                </Grid>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!--  Language Picker  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <ComboBox
                x:Name="SelectedLanguage"
                Width="200"
                Height="30"
                Margin="0,15,15,5"
                HorizontalAlignment="Right"
                VerticalContentAlignment="Top"
                FontSize="12"
                IsEnabled="{Binding Connected}"
                ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type model:LanguageTypeValue}}}"
                SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" />
            <Button
                Padding="-5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                cal:Message.Attach="[Event Click]=[Action OpenSettings()]"
                Background="Transparent"
                BorderBrush="Transparent">
                <materialDesign:PackIcon
                    Width="30"
                    Height="30"
                    Margin="5,5,20,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource PrimaryHueMidBrush}"
                    Kind="Cog" />
            </Button>
        </StackPanel>
        <!--<StackPanel
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Vertical">

            <TextBlock
                Margin="30,0"
                FontSize="19"
                Text="{helpers:Localization ProjectPicker_GetStarted}" />

        </StackPanel>-->

        <!--  Collab  -->
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="40,0,0,0"
                FontSize="19"
                FontWeight="Medium"
                Text="{helpers:Localization ProjectPicker_CollabProjects}" />

            <Button
                x:Name="NewCollabUser"
                Grid.Row="1"
                Width="340"
                Height="60"
                Margin="10,5,40,10"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                cal:Message.Attach="[Event Click]=[Action InitializeCollaborationUser()]"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Background="DarkGray"
                BorderThickness="0"
                Style="{StaticResource TransparentStyle}"
                Visibility="{Binding CreateCollabUserVisibility, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        Width="32"
                        Height="32"
                        Foreground="{StaticResource PrimaryHueMidBrush}"
                        Kind="AccountPlus" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="19"
                        FontWeight="Normal"
                        Text="{helpers:Localization ProjectPicker_AddNewCollabUser}" />
                </StackPanel>
            </Button>

            <Button
                x:Name="CollabProjectManager"
                Grid.Row="1"
                Width="340"
                Height="60"
                Margin="10,5,40,10"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                cal:Message.Attach="[Event Click]=[Action InitializeCollaborationUser()]"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Background="DarkGray"
                BorderThickness="0"
                Style="{StaticResource TransparentStyle}"
                Visibility="{Binding ManageCollabVisibility, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Image
                        Height="24"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="../../Assets/ClearCollabIcon.png" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="19"
                        FontWeight="Normal"
                        Text="{helpers:Localization ProjectPicker_ManageCollaborationProjects}" />
                </StackPanel>
            </Button>

            <Button
                x:Name="RefreshCollabProjectButton"
                Grid.Row="2"
                Width="340"
                Height="60"
                Margin="10,5,40,10"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Top"
                cal:Message.Attach="[Event Click]=[Action RefreshCollabProjectList()]"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Background="DarkGray"
                BorderThickness="0"
                Style="{StaticResource TransparentStyle}"
                Visibility="{Binding ManageCollabVisibility, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="19"
                        FontWeight="Normal"
                        Text="{helpers:Localization ProjectPicker_RefreshCollaborationProjects}" />
                </StackPanel>
            </Button>

            <Label
                Grid.Row="3"
                Margin="7,0"
                Content="{helpers:Localization ProjectPicker_ImportServerProject}"
                FontSize="19"
                FontWeight="Medium"
                Visibility="{Binding ManageCollabVisibility, Converter={StaticResource BoolToVisibilityConverter}}" />
            <ListView
                x:Name="CollabProjectListView"
                Grid.Row="4"
                ItemsSource="{Binding DashboardCollabProjectsDisplay}"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible">
                <!--  Visibility="{Binding CollabProjectVisibility}"  -->
                <ListView.IsEnabled>
                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                        <Binding Path="Connected" />
                        <Binding Path="CollabButtonsEnabled" />
                    </MultiBinding>
                </ListView.IsEnabled>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Width="532"
                            Height="64"
                            cal:Message.Attach="[Event MouseDown]=[Action ImportServerProject($dataContext, $eventArgs)]"
                            materialDesign:ShadowAssist.ShadowDepth="Depth0"
                            Background="Transparent"
                            Tag="{Binding DataContext, ElementName=GridLayout}">
                            <StackPanel Margin="0" Orientation="Horizontal">
                                <Grid Width="450" Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <!--<RowDefinition Height="*" />-->
                                        <!--<RowDefinition Height="Auto" />-->
                                    </Grid.RowDefinitions>


                                    <Image
                                        Width="30"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="../../Assets/ClearCollabIcon.png" />

                                    <!--<Image
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Height="30"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="../../Assets/ClearDashboard_logo_50.png" />-->

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="DemiBold"><Run Text="{Binding ProjectName}" /></TextBlock>

                                    <StackPanel
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Orientation="Vertical">
                                        <TextBlock VerticalAlignment="Center" FontSize="12">
                                            <Run FontWeight="DemiBold" Text="Owner:" />
                                            <Run Text="{Binding RemoteOwner}" />
                                        </TextBlock>
                                        <TextBlock VerticalAlignment="Center" FontStyle="Italic">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{StaticResource YellowDarkBrush}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding PermissionLevel}" Value="Owner">
                                                            <Setter Property="Foreground" Value="{StaticResource IndigoMidBrush}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding PermissionLevel}" Value="ReadWrite">
                                                            <Setter Property="Foreground" Value="{StaticResource GreenDarkBrush}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run
                                                FontSize="11"
                                                FontWeight="DemiBold"
                                                Text="Access Level:" />
                                            <Run FontSize="11" Text="{Binding PermissionLevel}" />
                                        </TextBlock>
                                        <TextBlock
                                            Width="145"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Text="{Binding Created}" />

                                    </StackPanel>


                                    <!--<TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompatibleVersion}" Value="False">
                                                        <Setter Property="Foreground" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style><Run FontSize="11" Text="Version: " /><Run Text=" " /><Run FontSize="11" Text="{Binding AppVersion}" />
                                    </TextBlock>-->
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        <!--  Errors  -->
        <StackPanel Grid.Row="3" Grid.Column="0">
            <TextBlock
                Width="500"
                MaxWidth="340"
                Margin="11,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                FontSize="16"
                Foreground="{StaticResource MaterialDesignValidationErrorBrush}"
                TextWrapping="Wrap"
                Visibility="{Binding DeleteErrorVisibility}">
                <Run Text="*" />
                <Run Text="{helpers:Localization ProjectPicker_DeleteError}" />
            </TextBlock>

            <TextBlock
                Width="500"
                MaxWidth="340"
                Margin="11,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                materialDesign:TextFieldAssist.TextBoxViewMargin="1 0 1 0"
                FontSize="16"
                Foreground="{StaticResource MaterialDesignValidationErrorBrush}"
                TextWrapping="Wrap"
                Visibility="{Binding AlreadyOpenMessageVisibility}">
                <Run Text="*" />
                <Run Text="This project is open already." />
            </TextBlock>
        </StackPanel>

        <StatusBar
            x:Name="StatusBar"
            Grid.Row="3"
            Grid.Column="1"
            Height="40"
            Foreground="{DynamicResource MaterialDesignDarkForeground}">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <StatusBarItem Grid.Column="1">
                <StackPanel>
                    <userControls:ReleaseNotesUserControl>
                        <!--  This DataTrigger was added to work around an issue where this control froze the UI.  See Jira DI 96  -->
                        <!--<userControls:ReleaseNotesUserControl.Style>
                            <Style TargetType="userControls:ReleaseNotesUserControl">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Connected}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </userControls:ReleaseNotesUserControl.Style>-->
                    </userControls:ReleaseNotesUserControl>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
