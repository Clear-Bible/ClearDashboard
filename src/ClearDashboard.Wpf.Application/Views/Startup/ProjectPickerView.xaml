<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.Startup.ProjectPickerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Startup"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ClearDashboard.Wpf.Application.Models"
    Width="1010"
    Height="635"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="550" />
            <ColumnDefinition Width="*" MinWidth="250" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="35,0,0,0">
            <TextBlock
                Margin="0,0,0,50"
                FontSize="32"
                Text="Clear Dashboard" />
            <TextBox
                Width="160"
                Height="30"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                materialDesign:HintAssist.Hint="Search"
                BorderBrush="Black"
                BorderThickness="1"
                Text="{Binding SearchText, Mode=TwoWay}" />
        </StackPanel>

        <ComboBox
            x:Name="SelectedLanguage"
            Grid.Row="0"
            Grid.Column="1"
            Width="200"
            Margin="0,0,5,0"
            HorizontalAlignment="Right"
            VerticalContentAlignment="Top"
            FontSize="12"
            ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type model:LanguageTypeValue}}}"
            SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" />


        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <!--<Button
            x:Name="MoveBackwards"
            Margin="5,5,5,5"
            cal:Message.Attach="MoveBackwards"
            Visibility="{Binding ShowBackButton, Converter={StaticResource VisibilityConverter}}"
            IsEnabled="{Binding EnableControls}">
                <StackPanel Orientation="Horizontal">
            -->
            <!--<SymbolIcon Symbol="Previous"  ></SymbolIcon>-->
            <!--
                    <Viewbox MaxWidth="50" MaxHeight="50">
                        <materialDesign:PackIcon
                        x:Name="BackIcon"
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Right"
                        Kind="ChevronLeft"
                        Visibility="Visible" />
                    </Viewbox>
                    <TextBlock VerticalAlignment="Center" Text="Back" />
                </StackPanel>
            </Button>-->

            <!--  Visibility="{Binding ShowForwardButton, Converter={StaticResource VisibilityConverter}}"  -->
            <Button
                x:Name="MoveForwards"
                Margin="5,5,5,5"
                cal:Message.Attach="MoveForwards"
                IsEnabled="{Binding EnableControls}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="Create New Project" />
                    <Viewbox MaxWidth="50" MaxHeight="50">
                        <materialDesign:PackIcon
                            x:Name="ForwardIcon"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Kind="ChevronRight"
                            Visibility="Visible" />
                    </Viewbox>
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  ==========================  -->
        <!--  PROJECT'S GRID  -->
        <!--  ==========================  -->

        <StackPanel
            Name="GridLayout"
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Vertical"
            Margin="20, 0"
            MaxHeight="450">
            <ListView
                x:Name="RadioButtonGroupChoiceChipOutline"
                MaxHeight="440"
                ItemsSource="{Binding DashboardProjects}"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                Style="{StaticResource MaterialDesignListBox}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Tag="{Binding DataContext, ElementName=GridLayout}" >
                            <materialDesign:Card.ContextMenu>
                                <ContextMenu cal:Action.TargetWithoutContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                    <MenuItem cal:Message.Attach="DeleteProject($dataContext)" Header="Delete Project" />
                                </ContextMenu>
                            </materialDesign:Card.ContextMenu>
                            <Button
                                x:Name="Workspace"
                               
                                Height="45"
                                cal:Message.Attach="NavigateToMainViewModel($dataContext)"
                                Background="Transparent" 
                                BorderThickness="0"
                                Margin="5">

                                <Grid
                                    Width="450"
                                  
                                    Background="Transparent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>



                                    <!--<Image Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Height="30"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="../../Resources/ClearDashboard_logo_128.png" />-->

                                    <TextBlock Grid.Row="0" Grid.Column="1">
                                        <Run FontSize="14" Text="Project: " />
                                        <Run Text="{Binding ProjectName}" />
                                    </TextBlock>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="2"
                                               Width="145"
                                               HorizontalAlignment="Center"
                                               FontSize="12"
                                               Text="{Binding Modified}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2">
                                        <Run FontSize="11" Text="Database: " />
                                        <Run FontSize="11" Text="{Binding FullFilePath}" />
                                    </TextBlock>
                                </Grid>
                            </Button>
                        </materialDesign:Card>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
