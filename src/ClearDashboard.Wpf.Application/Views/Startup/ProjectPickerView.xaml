                        x:Name="BackIcon"
                        Width="20"
                        Height="20"
                        HorizontalAlignment="Right"
                        Kind="ChevronLeft"
                        Visibility="Visible" />
                    </Viewbox>
                    <TextBlock VerticalAlignment="Center" Text="Back" />
                </StackPanel>
            </Button>-->

            <!--  Visibility="{Binding ShowForwardButton, Converter={StaticResource VisibilityConverter}}"  -->
            <Button
                x:Name="MoveForwards"
                Margin="5,5,5,5"
                cal:Message.Attach="MoveForwards"
                IsEnabled="{Binding EnableControls}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Text="Create New Project" />
                    <Viewbox MaxWidth="50" MaxHeight="50">
                        <materialDesign:PackIcon
                            x:Name="ForwardIcon"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Kind="ChevronRight"
                            Visibility="Visible" />
                    </Viewbox>
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  ==========================  -->
        <!--  PROJECT'S GRID  -->
        <!--  ==========================  -->

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Orientation="Vertical">
            <ListView
                x:Name="RadioButtonGroupChoiceChipOutline"
                Height="355"
                Margin="5"
                ItemsSource="{Binding DashboardProjects}"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                Style="{StaticResource MaterialDesignListBox}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!--<Border BorderBrush="{DynamicResource PrimaryHueMidBrush}" BorderThickness="1">-->
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">

                                <!--  PROJECT TEXT  -->
                                <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                                    <!--  DELETE PROJECT BUTTON  -->
                                    <Button
                                        Width="30"
                                        Height="30"
                                        cal:Message.Attach="DeleteProject($dataContext)"
                                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                        Style="{StaticResource MaterialDesignIconButton}">
                                        <Button.ToolTip>MaterialDesignIconButton</Button.ToolTip>
                                        <materialDesign:PackIcon Kind="DeleteForever" />
                                    </Button>
                                    <Button
                                        x:Name="Workspace"
                                        Height="45"
                                        Margin="15,8,12,12"
                                        cal:Message.Attach="NavigateToMainViewModel($dataContext)"
                                        Background="AliceBlue"
                                        IsEnabled="True">
                                        <!--<Button.Style>
                                                <Style BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" TargetType="Button">
                                                    <Setter Property="Padding" Value="0,3,0,3" />
                                                </Style>
                                            </Button.Style>-->
                                        <StackPanel Orientation="Horizontal">
                                            <!--<materialDesign:PackIcon
                                                    Width="36"
                                                    Height="36"
                                                    Margin="-15,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Kind="MonitorDashboard" />-->

                                            <StackPanel Width="200" Orientation="Vertical">
                                                <TextBlock HorizontalAlignment="Left">
                                                    <Run Text="PROJECT: " />
                                                    <Run Text="{Binding ProjectName}" />
                                                </TextBlock>
                                                <TextBlock>
                                                    <Run Text="Database: " />
                                                    <Run Text="{Binding ShortFilePath}" />
                                                </TextBlock>

                                            </StackPanel>
                                            <TextBlock
                                                Width="180"
                                                Margin="25,0,0,0"
                                                FontStyle="Italic"
                                                Text="{Binding Modified}" />
                                        </StackPanel>


                                    </Button>

                                </StackPanel>
                            </StackPanel>

                            <!--  ==========================  -->
                            <!--  TOOL BUTTONS  -->
                            <!--  ==========================  -->
                            <StackPanel Orientation="Horizontal">
                                <!--<Button
                                        x:Name="NewProject"
                                        Width="165"
                                        Margin="15,8,12,12"
                                        cal:Message.Attach="ProjectWorkspace($dataContext)"
                                        IsEnabled="True">
                                        <Button.Style>
                                            <Style BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" TargetType="Button">
