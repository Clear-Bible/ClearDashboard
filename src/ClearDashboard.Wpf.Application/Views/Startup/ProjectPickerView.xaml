                                        </StackPanel>
                                    </Button>-->


                                <!--<Button
                                        Width="165"
                                        Margin="15,8,12,12"
                                        IsEnabled="True">
                                        <Button.Style>
                                            <Style BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" TargetType="Button">
                                                <Setter Property="Padding" Value="0,3,0,3" />
                                            </Style>
                                        </Button.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                                Width="36"
                                                Height="36"
                                                Margin="-15,0,0,0"
                                                VerticalAlignment="Center"
                                                Kind="Dictionary" />
                                            <TextBlock VerticalAlignment="Center">ClearConcordance</TextBlock>
                                        </StackPanel>
                                    </Button>

                                    <Button
                                        Width="165"
                                        Margin="8"
                                        IsEnabled="True"
                                        Style="{StaticResource MaterialDesignRaisedAccentButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon
                                                Width="30"
                                                Height="30"
                                                Margin="-15,0,0,0"
                                                VerticalAlignment="Center"
                                                Kind="ChartSankeyVariant">
                                                <materialDesign:PackIcon.RenderTransform>
                                                    <RotateTransform Angle="270" CenterX="15" CenterY="15" />
                                                </materialDesign:PackIcon.RenderTransform>
                                            </materialDesign:PackIcon>
                                            <TextBlock VerticalAlignment="Center">ClearAligner</TextBlock>
                                        </StackPanel>
                                    </Button>-->
                            </StackPanel>
                        </StackPanel>
                        <!--</Border>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
                <!--<ListViewItem Content="Project #1" BorderBrush="Gray" BorderThickness="1" Margin="5,5,0,0"/>
                <ListViewItem Content="Project #2" BorderBrush="Gray" BorderThickness="1" Margin="5,5,0,0"/>
                <ListViewItem Content="Project #3" BorderBrush="Gray" BorderThickness="1" Margin="5,5,0,0"/>
                <ListViewItem Content="Project #4" BorderBrush="Gray" BorderThickness="1" Margin="5,5,0,0"/>-->
            </ListView>
        </StackPanel>
    </Grid>
