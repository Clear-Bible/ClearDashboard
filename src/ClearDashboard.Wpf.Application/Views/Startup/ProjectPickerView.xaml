<UserControl
    x:Class="ClearDashboard.Wpf.Application.Views.Startup.ProjectPickerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ClearDashboard.Wpf.Application.Helpers"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.Views.Startup"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ClearDashboard.Wpf.Application.Models"
    Width="Auto"
    Height="635"
    MinWidth="886"
    MinHeight="594"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="575" MinWidth="550" />
            <ColumnDefinition Width="*" MinWidth="250" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,0">
            <TextBlock
                Margin="47,10,0,30"
                FontSize="32"
                Text="Clear Dashboard" />
            <TextBlock
                Margin="52,0,0,21"
                FontSize="19"
                Text="Open recent" />
            <TextBox
                x:Name="SearchText"
                Width="320"
                Height="30"
                Margin="55,0,0,0"
                Padding="3"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                materialDesign:HintAssist.Hint="Search recent"
                BorderBrush="DarkGray"
                BorderThickness="1">
                <TextBox.Text>
                    <Binding
                        Mode="TwoWay"
                        Path="SearchText"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True" />
                </TextBox.Text>
            </TextBox>
        </StackPanel>



        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="10,10,10,10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Vertical">

            <ComboBox
                x:Name="SelectedLanguage"
                Grid.Row="0"
                Grid.Column="1"
                Width="200"
                Margin="0,15,15,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                VerticalContentAlignment="Top"
                FontSize="12"
                ItemsSource="{Binding Source={helpers:EnumBindingSource {x:Type model:LanguageTypeValue}}}"
                SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" />

            <TextBlock
                Margin="0,33,0,10"
                FontSize="19"
                Text="Get started" />

            <Button
                x:Name="MoveForwards"
                Width="340"
                Height="75"
                Margin="0,15,0,0"
                VerticalContentAlignment="Top"
                HorizontalContentAlignment="Left"
                cal:Message.Attach="MoveForwards"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                Background="LightGray"
                BorderThickness="0"
                IsEnabled="{Binding EnableControls}"
                MouseEnter="MoveForwards_OnMouseEnter"
                MouseLeave="MoveForwards_OnMouseLeave">
                <StackPanel Orientation="Vertical">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="19"
                        FontWeight="Normal"
                        Text="Create New Project" />
                    <TextBlock
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        FontWeight="Light"
                        Text="Create your project to get started."
                        TextWrapping="Wrap" />
                </StackPanel>
            </Button>

            <!--  cal:Message.Attach="MouseDown"  -->
            <!--<materialDesign:Card
                x:Name="MoveForwards"
                Width="475"
                Margin="5,5,5,5"
                materialDesign:ShadowAssist.ShadowDepth="Depth0"
                IsEnabled="{Binding EnableControls}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="Create New Project" />
                        <Viewbox MaxWidth="50" MaxHeight="50">
                            <materialDesign:PackIcon
                            x:Name="ForwardIcon"
                            Width="20"
                            Height="20"
                            HorizontalAlignment="Right"
                            Kind="ChevronRight"
                            Visibility="Visible" />
                    </Viewbox>
                </StackPanel>
            </materialDesign:Card>-->
        </StackPanel>

        <!--  ==========================  -->
        <!--  PROJECT'S GRID  -->
        <!--  ==========================  -->

        <StackPanel
            Name="GridLayout"
            Grid.Row="1"
            Grid.Column="0"
            Margin="57,0,0,0"
            Orientation="Vertical">
            <ListView
                x:Name="RadioButtonGroupChoiceChipOutline"
                Height="460"
                Margin="5"
                ItemsSource="{Binding DashboardProjectsDisplay}"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Visible"
                Style="{StaticResource MaterialDesignListBox}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card
                            Width="475"
                            cal:Message.Attach="[Event MouseDown]=[Action NavigateToMainViewModel($dataContext)]"
                            materialDesign:ShadowAssist.ShadowDepth="Depth0"
                            Tag="{Binding DataContext, ElementName=GridLayout}">


                            <materialDesign:Card.ContextMenu>
                                <ContextMenu cal:Action.TargetWithoutContext="{Binding Path=PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                    <MenuItem cal:Message.Attach="DeleteProject($dataContext)" Header="Delete Project" />
                                </ContextMenu>
                            </materialDesign:Card.ContextMenu>
                            <StackPanel Margin="0" Orientation="Horizontal">
                                <!--
                                    MouseEnter="UIElement_OnMouseEnter"
                                    MouseLeave="UIElement_OnMouseLeave"
                                -->
                                <Grid Width="450" Height="45">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Image
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Height="30"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Source="../../Assets/ClearDashboard_logo_50.png" />

                                    <TextBlock
                                        Grid.Column="1"
                                        FontSize="14"
                                        FontWeight="DemiBold">
                                        <Run Text="Project: " />
                                        <Run Text="{Binding ProjectName}" />
                                    </TextBlock>

                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Width="145"
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Text="{Binding Modified}" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2">
                                        <Run FontSize="11" Text="Database: " />
                                        <Run FontSize="11" Text="{Binding FullFilePath}" />
                                    </TextBlock>
                                </Grid>

                            </StackPanel>
                            <!--</Border>-->
                        </materialDesign:Card>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
