    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ClearDashboard.Wpf.Application.Models"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
