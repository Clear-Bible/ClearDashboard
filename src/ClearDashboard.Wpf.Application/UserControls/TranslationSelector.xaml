<UserControl
    x:Class="ClearDashboard.Wpf.Application.UserControls.TranslationSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="16"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>
    <Border
        BorderBrush="{DynamicResource MaterialDesignToolForeground}"
        BorderThickness="1"
        CornerRadius="3">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <Label
                Grid.Row="0"
                HorizontalContentAlignment="Center"
                Content="Select a translation for the word" />
            <Label
                Grid.Row="1"
                HorizontalContentAlignment="Center"
                Content="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TokenDisplayViewModel.SurfaceText}"
                FontSize="20"
                FontWeight="Bold" />
            <ListView
                Name="TranslationOptionsList"
                Grid.Row="2"
                Margin="10"
                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationOptions}"
                SelectedItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=SelectedItem}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Height" Value="30"></Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="FontWeight" Value="Bold"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView x:Name="TranslationOptionsGrid">
                        <GridViewColumn Width="297" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        
                                        Text="{Binding Word}"
                                        TextAlignment="Left" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="75" Header="Count">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="-20,0,0,-20"
                                        FontSize="12"
                                        Text="{Binding}"
                                        TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Width="40"
                                        Text="{Binding Probability}"
                                        TextAlignment="Right" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label Grid.Row="3">Your Translation:</Label>
            <TextBox
                x:Name="TranslationValue"
                Grid.Row="4"
                Margin="10,0"
                Text="{Binding SelectedItem.Word, ElementName=TranslationOptionsList}" />
            <StackPanel Grid.Row="5" Orientation="Horizontal">
                <CheckBox
                    x:Name="ApplyAllCheckbox"
                    Margin="10,10,0,0"
                    FontSize="13"
                    IsChecked="True">
                    Change all unset occurrences
                    <CheckBox.ToolTip>If checked, this will change all unset occurrences of this word</CheckBox.ToolTip>
                </CheckBox>
            </StackPanel>
            <StackPanel
                Grid.Row="6"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button Margin="10" Click="ApplyTranslation">Apply</Button>
                <Button Margin="10" Click="Cancel">Cancel</Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
