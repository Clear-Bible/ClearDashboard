<UserControl
    x:Class="ClearDashboard.Wpf.Application.UserControls.LabelSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label
            Margin="0,-5,0,0"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            MouseLeftButtonDown="AddButtonClicked">
            +
        </Label>
        <StackPanel
            x:Name="LabelStackPanel"
            Grid.Column="1"
            Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TextBoxVisibility}">
            <TextBox
                x:Name="LabelTextBox"
                MinWidth="100"
                Margin="5,0,0,0"
                KeyUp="OnLabelTextBoxKeyUp"
                LostFocus="LabelTextBox_OnLostFocus"
                LostKeyboardFocus="LabelTextBox_OnLostKeyboardFocus"
                TextChanged="OnLabelTextChanged" />
            <Popup
                x:Name="LabelPopup"
                Height="Auto"
                Margin="5,0,0,0"
                Placement="Right"
                StaysOpen="False"
                Visibility="Collapsed">
                <ListBox
                    x:Name="LabelSuggestionListBox"
                    Height="Auto"
                    Background="{DynamicResource MaterialDesignPaper}"
                    BorderThickness="0.5"
                    DisplayMemberPath="Text"
                    Foreground="{DynamicResource MaterialDesignBody}"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    SelectionChanged="OnLabelListSelectionChanged"
                    Visibility="Collapsed" />
            </Popup>
        </StackPanel>
    </Grid>
</UserControl>
