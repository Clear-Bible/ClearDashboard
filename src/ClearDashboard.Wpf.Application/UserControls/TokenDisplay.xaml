<UserControl x:Class="ClearDashboard.Wpf.Application.UserControls.TokenDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClearDashboard.Wpf.Application.UserControls"
             xmlns:cm="http://caliburnmicro.com"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:display="clr-namespace:ClearDashboard.Wpf.Application.ViewModels.Display" d:DataContext="{d:DesignInstance Type=display:TokenDisplayViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="TextDisplay">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="Auto">
        <StackPanel.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Create Note" Click="OnCreateNote"></MenuItem>
            </ContextMenu>
        </StackPanel.ContextMenu>
        <Button x:Name="TokenButton"
                Background="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TokenBackground}" 
                Foreground="{DynamicResource MaterialDesignBody}" 
                FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=FontSize}" 
                Margin="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TokenMargin}" 
                Padding="0" 
                Width="{Binding ElementName=SurfaceTextBlock, Path=ActualWidth}" Height="Auto"
                HorizontalAlignment="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationAlignment}" 
                HorizontalContentAlignment="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationAlignment}"
                IsDefault="False" BorderThickness="0"
                Click="OnTokenClicked" MouseDoubleClick="OnTokenDoubleClicked"
                PreviewMouseLeftButtonDown="OnTokenLeftButtonDown" MouseLeftButtonUp="OnTokenLeftButtonUp" 
                MouseRightButtonDown="OnTokenRightButtonDown" MouseRightButtonUp="OnTokenRightButtonUp" 
                MouseEnter="OnTokenMouseEnter" MouseLeave="OnTokenMouseLeave" MouseWheel="OnTokenMouseWheel"
                materialDesign:ShadowAssist.ShadowDepth="Depth0">
            <TextBlock x:Name="SurfaceTextBlock" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=SurfaceText}" Margin="0" >
            </TextBlock>
            <Button.ToolTip>
                <ToolTip Placement="Left"
                     PlacementRectangle="50,0,0,0"
                     HorizontalOffset="10" 
                     VerticalOffset="20"
                     HasDropShadow="false" 
                     Background="LightYellow"
                 >
                    <local:ExtendedPropertiesDisplay ExtendedPropertiesXml="{Binding ExtendedProperties}">
                    </local:ExtendedPropertiesDisplay>
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <Rectangle Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=NoteIndicatorVisibility}" 
                   Margin="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=NoteIndicatorMargin}" 
                   HorizontalAlignment="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationAlignment}" 
                   Fill="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=NoteIndicatorColor}" 
                   Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=NoteIndicatorHeight}" 
                   Width="{Binding Path=ActualWidth, ElementName=TokenButton}"
                   MouseLeftButtonDown="OnNoteLeftButtonDown" MouseLeftButtonUp="OnNoteLeftButtonUp" 
                   MouseRightButtonDown="OnNoteRightButtonDown" MouseRightButtonUp="OnNoteRightButtonUp" 
                   MouseEnter="OnNoteMouseEnter" MouseLeave="OnNoteMouseLeave" MouseWheel="OnNoteMouseWheel"
                   >
        </Rectangle>
        <Button Background="Transparent" 
                Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationColor}" 
                FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationFontSize}" 
                Margin="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationMargin}" 
                Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationVisibility}" 
                FontFamily="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=FontFamily}" 
                FlowDirection="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=FlowDirection}" 
                Padding="0" 
                Height="Auto" 
                IsDefault="False" BorderThickness="0"
                HorizontalAlignment="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationAlignment}"
                HorizontalContentAlignment="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TranslationAlignment}"
                Click="OnTranslationClicked" MouseDoubleClick="OnTranslationDoubleClicked"
                PreviewMouseLeftButtonDown="OnTranslationLeftButtonDown" MouseLeftButtonUp="OnTranslationLeftButtonUp" 
                MouseRightButtonDown="OnTranslationRightButtonDown" MouseRightButtonUp="OnTranslationRightButtonUp" 
                MouseEnter="OnTranslationMouseEnter" MouseLeave="OnTranslationMouseLeave" MouseWheel="OnTranslationMouseWheel"
                materialDesign:ShadowAssist.ShadowDepth="Depth0">
            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=TargetTranslationText}" Margin="0" ></TextBlock>
        </Button>
    </StackPanel>
</UserControl>
