<UserControl
    x:Class="ClearDashboard.Wpf.UserControls.ClockUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClearDashboard.Wpf.UserControls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="Aquamarine">
        <Menu
            x:Name="Menu"
            MinWidth="50"
            Background="DarkRed"
            ItemsSource="{Binding MenuItems}">
            <Menu.ItemContainerStyle>
                <Style TargetType="{x:Type MenuItem}">
                    <Setter Property="Command" Value="{Binding Command}" />
                    <Setter Property="Background" Value="Aqua" />
                    <Setter Property="Foreground" Value="Black" />
                    <EventSetter Event="SubmenuOpened" Handler="EventSetter_OnHandler" />
                    <EventSetter Event="MouseMove" Handler="OnMouseMove_Handler" />
                    <EventSetter Event="Click" Handler="Click_OnHandler" />
                </Style>
            </Menu.ItemContainerStyle>
            <Menu.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type local:ClockUserControl}" ItemsSource="{Binding Path=MenuItems}">
                    <StackPanel Background="CadetBlue" Orientation="Horizontal">
                        <Button
                            x:Name="DeleteButton"
                             
                            Click="DeleteButton_OnClick"
                            Content="-"
                            Visibility="{Binding DeleteButtonVisibility, Mode=TwoWay}" />
                        <CheckBox
                            Background="DarkGoldenrod"
                            Checked="ToggleButton_OnChecked"
                            IsChecked="{Binding CheckBoxIsChecked, Mode=TwoWay}"
                            Unchecked="ToggleButton_OnChecked"
                            Visibility="{Binding ClockCheckBoxVisibility}" />
                        <TextBox
                            MinWidth="20"
                            Background="ForestGreen"
                            LostFocus="UIElement_OnLostFocus"
                            Text="{Binding TextBoxText}"
                            Visibility="{Binding ClockTextBoxVisibility}" />
                        <TextBlock
                            MinWidth="20"
                            Background="Crimson"
                            Text="{Binding NameTime}"
                            Visibility="{Binding NameTimeVisibility}" />
                        <TextBlock
                            MinWidth="20"
                            Text="{Binding Header, Mode=TwoWay}"
                            Visibility="{Binding ClockTextBlockVisibility}" />
                        <Button
                            x:Name="AddButton"
                            Click="ButtonBase_OnClick"
                            Content="+"
                            Visibility="{Binding ClockAddTimeZoneVisibility}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </Menu.ItemTemplate>
        </Menu>

