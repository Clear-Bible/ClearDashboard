<UserControl x:Class="ClearDashboard.Wpf.Views.BiblicalTerms"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClearDashboard.Wpf.Views"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <StackPanel Orientation="Vertical">

                <Button
                            Width="350"
                            Margin="20,5,20,5"
                            HorizontalAlignment="Left"
                            Style="{DynamicResource MaterialDesignButton}">
                    Reload
                </Button>

                <DataGrid
                            x:Name="gridVerses"
                            Margin="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserResizeColumns="True"
                            ItemsSource="{Binding BiblicalTerms}"
                            RowBackground="{DynamicResource MaterialDesignDarkBackground}"
                            ScrollViewer.CanContentScroll="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Visible"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="Height" Value="{x:Static sys:Double.NaN}" />
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <!--  rendering note button  -->
                        <DataGridTemplateColumn Width="20" Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                                Width="20"
                                                Height="15"
                                                Margin="-15,0,0,0"
                                                HorizontalAlignment="Center"
                                                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                                Style="{DynamicResource MaterialDesignIconButton}"
                                                ToolTip="Note">
                                        <materialDesign:PackIcon
                                                    Width="12"
                                                    Height="12"
                                                    Foreground="Wheat"
                                                    Kind="Note" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--  star button  -->
                        <DataGridTemplateColumn Width="20" Header="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                                Width="20"
                                                Height="15"
                                                Margin="-15,0,0,0"
                                                HorizontalAlignment="Center"
                                                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                                Style="{DynamicResource MaterialDesignIconButton}"
                                                ToolTip="Add Biblical Term">
                                        <materialDesign:PackIcon
                                                    Width="12"
                                                    Height="12"
                                                    Foreground="Wheat"
                                                    Kind="Star" />
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Width="80" Header="Term">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                                Width="150"
                                                Height="15"
                                                Text="{Binding Lemma}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="100" Header="Category">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                                Width="150"
                                                Height="15"
                                                Text="{Binding SemanticDomain}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="200" Header="English">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                                Width="150"
                                                Height="15"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                Text="{Binding Gloss}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="20" Header="Counts">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                                Width="20"
                                                Height="15"
                                                Text="{Binding Renderings.Count}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="20" Header="Found">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                                Width="20"
                                                Height="15"
                                                Text="{Binding Renderings.Count}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="200" Header="Renderings">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                                Width="{Binding Path=ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}"
                                                Height="15"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                Text="{Binding RenderingString}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Background" Value="DimGray" />

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RenderingString}" Value="{x:Null}">
                                                        <Setter Property="Background" Value="{DynamicResource OrangeDarkBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
